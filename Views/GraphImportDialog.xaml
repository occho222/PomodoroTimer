<Window x:Class="PomodoroTimer.Views.GraphImportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Microsoft Graphからタスクインポート" 
        Height="400" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Microsoft Graphからタスクインポート" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource PrimaryBrush}"/>
            <TextBlock Text="インポートしたいデータソースを選択してください" 
                       FontSize="14" 
                       Foreground="{StaticResource TextSecondary}" 
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- インポートオプション -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- Microsoft To-Do -->
                <Border Style="{StaticResource TaskItemStyle}" Margin="0,0,0,15">
                    <StackPanel>
                        <CheckBox x:Name="MicrosoftToDoCheckBox" 
                                  Content="Microsoft To-Do" 
                                  FontSize="16" 
                                  FontWeight="SemiBold"
                                  IsChecked="True"/>
                        <TextBlock Text="個人のタスク管理に使用されているMicrosoft To-Doからタスクをインポートします。" 
                                   Margin="25,5,0,0" 
                                   TextWrapping="Wrap" 
                                   Foreground="{StaticResource TextSecondary}"
                                   FontSize="12"/>
                    </StackPanel>
                </Border>

                <!-- Microsoft Planner -->
                <Border Style="{StaticResource TaskItemStyle}" Margin="0,0,0,15">
                    <StackPanel>
                        <CheckBox x:Name="PlannerCheckBox" 
                                  Content="Microsoft Planner" 
                                  FontSize="16" 
                                  FontWeight="SemiBold"/>
                        <TextBlock Text="チームプロジェクト管理に使用されているMicrosoft Plannerからタスクをインポートします。" 
                                   Margin="25,5,0,0" 
                                   TextWrapping="Wrap" 
                                   Foreground="{StaticResource TextSecondary}"
                                   FontSize="12"/>
                    </StackPanel>
                </Border>

                <!-- Outlook Tasks -->
                <Border Style="{StaticResource TaskItemStyle}" Margin="0,0,0,15">
                    <StackPanel>
                        <CheckBox x:Name="OutlookCheckBox" 
                                  Content="Outlook タスク" 
                                  FontSize="16" 
                                  FontWeight="SemiBold"/>
                        <TextBlock Text="Outlookで管理されているタスクからインポートします。" 
                                   Margin="25,5,0,0" 
                                   TextWrapping="Wrap" 
                                   Foreground="{StaticResource TextSecondary}"
                                   FontSize="12"/>
                    </StackPanel>
                </Border>

                <!-- 注意事項 -->
                <Border Background="#FFF3CD" 
                        BorderBrush="#FFE69C" 
                        BorderThickness="1" 
                        CornerRadius="5" 
                        Padding="10"
                        Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="⚠️ 注意事項" 
                                   FontWeight="Bold" 
                                   Foreground="#856404"/>
                        <TextBlock Text="• 初回インポート時は、Microsoft アカウントでの認証が必要です。" 
                                   Margin="0,5,0,0" 
                                   FontSize="12" 
                                   Foreground="#856404"/>
                        <TextBlock Text="• 重複するタスクは自動的にスキップされます。" 
                                   FontSize="12" 
                                   Foreground="#856404"/>
                        <TextBlock Text="• インポートされたタスクは自動的に保存されます。" 
                                   FontSize="12" 
                                   Foreground="#856404"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- ボタン -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="キャンセル" 
                    Click="Cancel_Click" 
                    Style="{StaticResource RoundButton}"
                    Background="#6C757D" 
                    Margin="0,0,10,0"/>
            <Button Content="インポート開始" 
                    Click="Import_Click" 
                    Style="{StaticResource RoundButton}"/>
        </StackPanel>
    </Grid>
</Window>