<Window x:Class="PomodoroTimer.Views.TaskSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="次のタスクを選択" 
        Height="900" Width="1400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{StaticResource BackgroundLight}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー -->
        <Border Grid.Row="0" Background="White" Margin="10,10,10,5" CornerRadius="12" Padding="20">
            <StackPanel>
                <TextBlock Text="セッション継続" FontSize="20" FontWeight="Bold" 
                           Foreground="{StaticResource TextLight}" HorizontalAlignment="Center"/>
                <TextBlock Text="現在のタスクが完了しました。セッションを継続して次のタスクを選択してください。" 
                           FontSize="12" Foreground="Gray" HorizontalAlignment="Center" Margin="0,5,0,0"
                           TextWrapping="Wrap"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <TextBlock Text="残り時間: " FontSize="14" Foreground="Gray" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding RemainingTime}" FontSize="16" FontWeight="Bold" 
                               Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- カンバンスタイル タスクボード -->
        <Border Grid.Row="1" Background="White" Margin="10,5,10,5" CornerRadius="12" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 検索・フィルター -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 上段：検索とカテゴリ -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBox Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource SearchTextBox}" Width="250"
                                 ToolTip="タスク名で検索" Margin="0,0,15,0"/>
                        <ComboBox ItemsSource="{Binding AvailableCategories}"
                                  SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                                  Style="{StaticResource FilterComboBox}" Width="140" Margin="0,0,15,0"
                                  ToolTip="カテゴリでフィルター"/>
                        <Button Content="フィルタークリア" Command="{Binding ClearFiltersCommand}"
                                Style="{StaticResource RoundButton}" Background="Gray" FontSize="11" Padding="8,4"/>
                    </StackPanel>
                    
                    <!-- 下段：優先度と期日 -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <TextBlock Text="優先度:" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="11" Foreground="Gray"/>
                        <ComboBox ItemsSource="{Binding AvailablePriorities}"
                                  SelectedItem="{Binding SelectedPriority, Mode=TwoWay}"
                                  Style="{StaticResource FilterComboBox}" Width="90" Margin="0,0,20,0"
                                  ToolTip="優先度でフィルター" FontSize="11"/>
                        <TextBlock Text="期日:" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="11" Foreground="Gray"/>
                        <ComboBox ItemsSource="{Binding AvailableDueDateFilters}"
                                  SelectedItem="{Binding SelectedDueDateFilter, Mode=TwoWay}"
                                  Style="{StaticResource FilterComboBox}" Width="120" Margin="0,0,15,0"
                                  ToolTip="期日でフィルター" FontSize="11"/>
                    </StackPanel>
                </Grid>

                <!-- カンバン形式のタスクボード -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 未開始タスク列（左） -->
                    <Border Grid.Column="0" Background="#F8F9FA" CornerRadius="10" Padding="15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                                <TextBlock Text="📋 未開始" FontSize="16" FontWeight="Bold" 
                                           Foreground="#374151" VerticalAlignment="Center"/>
                                <Border Background="#E5E7EB" CornerRadius="12" Margin="10,0,0,0" Padding="8,2">
                                    <TextBlock Text="{Binding TodoTasks.Count}" FontSize="12" FontWeight="SemiBold" 
                                               Foreground="#6B7280"/>
                                </Border>
                            </StackPanel>
                            
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding TodoTasks}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource KanbanTaskCard}" Margin="0,0,0,10"
                                                    MouseLeftButtonDown="TaskItem_MouseLeftButtonDown"
                                                    Cursor="Hand"
                                                    BorderBrush="#D1D5DB" BorderThickness="2">
                                                <Border.Triggers>
                                                    <EventTrigger RoutedEvent="MouseEnter">
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                                To="#F0F9FF" Duration="0:0:0.2"/>
                                                                <ColorAnimation Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                                                To="#3B82F6" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                    <EventTrigger RoutedEvent="MouseLeave">
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                                To="White" Duration="0:0:0.2"/>
                                                                <ColorAnimation Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                                                To="#D1D5DB" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                </Border.Triggers>
                                                
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    
                                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                                        <Ellipse Style="{StaticResource PriorityIndicator}"
                                                                 Fill="{Binding Priority, Converter={StaticResource PriorityToColorConverter}}"/>
                                                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="15"
                                                                   VerticalAlignment="Center" TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                    
                                                    <TextBlock Grid.Row="1" Text="{Binding Description}" FontSize="12" 
                                                               Foreground="Gray" TextWrapping="Wrap" Margin="0,0,0,8"
                                                               Visibility="{Binding Description, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                               MaxHeight="60" TextTrimming="CharacterEllipsis"/>
                                                    
                                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,8">
                                                        <Border Background="{StaticResource SecondaryBrush}" CornerRadius="3" Margin="0,0,6,0"
                                                                Visibility="{Binding Category, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                            <TextBlock Text="{Binding Category}" FontSize="10" 
                                                                       Foreground="White" Padding="4,2"/>
                                                        </Border>
                                                        <Border Background="#FEF3C7" CornerRadius="3" Margin="0,0,6,0"
                                                                Visibility="{Binding DueDate, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                            <TextBlock Text="{Binding DueDate, StringFormat='{}📅 {0:MM/dd}'}" FontSize="10" 
                                                                       Foreground="#92400E" Padding="4,2"/>
                                                        </Border>
                                                    </StackPanel>
                                                    
                                                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                                                        <TextBlock Text="{Binding CompletedPomodoros, StringFormat={}🍅 {0}}" 
                                                                   FontSize="12" Margin="0,0,5,0"/>
                                                        <TextBlock Text="{Binding EstimatedPomodoros, StringFormat={}/ {0}}" 
                                                                   FontSize="12" Foreground="Gray"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>

                    <!-- 待機中タスク列（右） -->
                    <Border Grid.Column="2" Background="#F0F9FF" CornerRadius="10" Padding="15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                                <TextBlock Text="⏸️ 待機中" FontSize="16" FontWeight="Bold" 
                                           Foreground="#1E40AF" VerticalAlignment="Center"/>
                                <Border Background="#DBEAFE" CornerRadius="12" Margin="10,0,0,0" Padding="8,2">
                                    <TextBlock Text="{Binding WaitingTasks.Count}" FontSize="12" FontWeight="SemiBold" 
                                               Foreground="#1E40AF"/>
                                </Border>
                            </StackPanel>
                            
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding WaitingTasks}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource KanbanTaskCard}" Margin="0,0,0,10"
                                                    MouseLeftButtonDown="TaskItem_MouseLeftButtonDown"
                                                    Cursor="Hand"
                                                    BorderBrush="#3B82F6" BorderThickness="2">
                                                <Border.Triggers>
                                                    <EventTrigger RoutedEvent="MouseEnter">
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                                To="#FEF3C7" Duration="0:0:0.2"/>
                                                                <ColorAnimation Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                                                To="#F59E0B" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                    <EventTrigger RoutedEvent="MouseLeave">
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                                To="White" Duration="0:0:0.2"/>
                                                                <ColorAnimation Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                                                To="#3B82F6" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                </Border.Triggers>
                                                
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    
                                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                                        <Ellipse Style="{StaticResource PriorityIndicator}"
                                                                 Fill="{Binding Priority, Converter={StaticResource PriorityToColorConverter}}"/>
                                                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="15"
                                                                   VerticalAlignment="Center" TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                    
                                                    <TextBlock Grid.Row="1" Text="{Binding Description}" FontSize="12" 
                                                               Foreground="Gray" TextWrapping="Wrap" Margin="0,0,0,8"
                                                               Visibility="{Binding Description, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                               MaxHeight="60" TextTrimming="CharacterEllipsis"/>
                                                    
                                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,8">
                                                        <Border Background="{StaticResource SecondaryBrush}" CornerRadius="3" Margin="0,0,6,0"
                                                                Visibility="{Binding Category, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                            <TextBlock Text="{Binding Category}" FontSize="10" 
                                                                       Foreground="White" Padding="4,2"/>
                                                        </Border>
                                                        <Border Background="#FEF3C7" CornerRadius="3" Margin="0,0,6,0"
                                                                Visibility="{Binding DueDate, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                            <TextBlock Text="{Binding DueDate, StringFormat='{}📅 {0:MM/dd}'}" FontSize="10" 
                                                                       Foreground="#92400E" Padding="4,2"/>
                                                        </Border>
                                                    </StackPanel>
                                                    
                                                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                                                        <TextBlock Text="{Binding CompletedPomodoros, StringFormat={}🍅 {0}}" 
                                                                   FontSize="12" Margin="0,0,5,0"/>
                                                        <TextBlock Text="{Binding EstimatedPomodoros, StringFormat={}/ {0}}" 
                                                                   FontSize="12" Foreground="Gray"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- ボタン -->
        <Border Grid.Row="2" Background="White" Margin="10,5,10,10" CornerRadius="12" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="セッション停止" Command="{Binding StopSessionCommand}"
                        Style="{StaticResource RoundButton}" Background="Gray" Margin="0,0,10,0"/>
                <Button Content="休憩に移行" Command="{Binding StartBreakCommand}"
                        Style="{StaticResource RoundButton}" Background="{StaticResource WarningBrush}" Margin="0,0,10,0"/>
                <Button Content="選択したタスクで継続" Command="{Binding ContinueWithSelectedTaskCommand}"
                        Style="{StaticResource RoundButton}" Background="{StaticResource AccentBrush}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>