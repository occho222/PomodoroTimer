                                            <DataTemplate>
                                                <Border Background="#F3E8FF" CornerRadius="4" Margin="0,0,6,6" Padding="8,4">
                                                    <Button Content="{Binding Title}" FontSize="11" FontWeight="SemiBold"
                                                            Command="{Binding DataContext.OpenLinkItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                                            Foreground="#7C3AED" Background="Transparent" BorderThickness="0" 
                                                            Cursor="Hand" ToolTip="{Binding Url}"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    
                                    <!-- 進捗とポモドーロ情報 -->
                                    <Grid Grid.Row="6" Margin="0,15,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- 時間情報 -->
                                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                            <TextBlock Text="⏱" FontSize="14" FontWeight="SemiBold" 
                                                       Foreground="#4A90E2" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                            <TextBlock Text="{Binding CurrentTaskRealTimeElapsedMinutes, Converter={StaticResource MinutesToTimeFormatConverter}}" FontSize="14" FontWeight="Bold" 
                                                       Foreground="#4A90E2" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding CurrentTask.EstimatedMinutes, Converter={StaticResource MinutesToTimeFormatConverter}, StringFormat={}/ {0}}" FontSize="14" 
                                                       Foreground="Gray" VerticalAlignment="Center" Margin="4,0,0,0"/>
                                        </StackPanel>
                                        
                                        <!-- 進捗バー -->
                                        <StackPanel Grid.Row="1" Margin="0,0,0,8">
                                            <TextBlock Text="{Binding CurrentTaskRealTimeProgressPercentage, StringFormat={}進捗: {0:F0}%, Mode=OneWay}" 
                                                       FontSize="12" Foreground="#6B7280" Margin="0,0,0,4"/>
                                            <ProgressBar Value="{Binding CurrentTaskRealTimeProgressPercentage, Mode=OneWay}" Maximum="100" 
                                                         Height="10" Background="#E5E7EB" Foreground="#F59E0B"/>
                                        </StackPanel>
                                        
                                        <!-- 期限・添付ファイル情報 -->
                                        <StackPanel Grid.Row="2">
                                            <TextBlock Text="{Binding CurrentTask.DueDate, StringFormat={}⏰ 期限: {0:MM/dd HH:mm}, Mode=OneWay}" 
                                                       FontSize="12" Foreground="#EF4444" Margin="0,0,0,4"
                                                       Visibility="{Binding CurrentTask.DueDate, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}"/>
                                            <StackPanel Orientation="Horizontal"
                                                        Visibility="{Binding CurrentTask.AttachmentCount, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">
                                                <TextBlock Text="📎" FontSize="12" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding CurrentTask.AttachmentCount, StringFormat={}{0}個の添付ファイル, Mode=OneWay}" 
                                                           FontSize="11" Foreground="#6B7280" Margin="4,0,0,0"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>
                            
                            <!-- タスクが選択されていない場合の表示 -->
                            <Border Background="#F9FAFB" CornerRadius="8" Padding="30,40">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentTask}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="⏰" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,12" Foreground="#D1D5DB"/>
                                    <TextBlock Text="実行中のタスクはありません" FontSize="14" FontWeight="SemiBold" 
                                               HorizontalAlignment="Center" Foreground="#6B7280" Margin="0,0,0,6"/>
                                    <TextBlock Text="待機中タスクから「▶」ボタンで" FontSize="11" 
                                               HorizontalAlignment="Center" Foreground="#9CA3AF" Margin="0,0,0,3"/>
                                    <TextBlock Text="25分セッションを開始してください" FontSize="11" 
                                               HorizontalAlignment="Center" Foreground="#9CA3AF"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- 完了タスク列 -->
            <Border Grid.Column="3" Background="White" Margin="3,0,0,0" CornerRadius="12">
                <i:Interaction.Behaviors>
                    <behaviors:KanbanDragDropBehavior TargetStatus="Completed"/>
                </i:Interaction.Behaviors>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 列ヘッダー -->
                    <Border Grid.Row="0" Background="#F0FDF4" CornerRadius="12,12,0,0" Padding="20,15">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                        <Ellipse Width="12" Height="12" Fill="#10B981" VerticalAlignment="Center"/>
                                        <TextBlock Text="完了" FontSize="16" FontWeight="Bold" Margin="8,0,0,0" 
                                                   Foreground="{StaticResource TextLight}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding DoneTasksEstimatedMinutes, Converter={StaticResource MinutesToTimeFormatConverter}, StringFormat={}（見積: {0}）}" 
                                                   FontSize="12" Foreground="#6B7280" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding DoneTasksTotalElapsedMinutes, Converter={StaticResource MinutesToTimeFormatConverter}, StringFormat={}（実績: {0}）}" 
                                                   FontSize="12" Foreground="#6B7280" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <ToggleButton Grid.Column="1" 
                                              IsChecked="{Binding ShowTodayCompletedOnly}"
                                              ToolTip="本日完了タスクのみ表示"
                                              Background="#10B981" 
                                              Foreground="White"
                                              Padding="8,4"
                                              FontSize="10"
                                              BorderThickness="0"
                                              VerticalAlignment="Center">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                CornerRadius="4"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" 
                                                                              VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter Property="Background" Value="#059669"/>
                                                    <Setter Property="Content" Value="📅 今日"/>
                                                </Trigger>
                                                <Trigger Property="IsChecked" Value="False">
                                                    <Setter Property="Background" Value="#10B981"/>
                                                    <Setter Property="Content" Value="📋 全て"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>
                            </Grid>
                            <TextBlock Text="{Binding FilteredDoneTasksCollection.Count, StringFormat={}タスク数: {0}}" 
                                       FontSize="12" Foreground="Gray" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- タスクリスト -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="10">
                        <ItemsControl ItemsSource="{Binding FilteredDoneTasksCollection}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource KanbanTaskCard}" Margin="0,0,0,8" BorderBrush="#10B981" Opacity="0.8"
                                            MouseLeftButtonDown="TaskCard_MouseLeftButtonDown"
                                            Tag="{Binding}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- タスクヘッダー -->
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                        <TextBlock Text="✅" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="14"
                                                               TextWrapping="Wrap" LineHeight="18"
                                                               TextDecorations="Strikethrough" Margin="0,0,8,0"/>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Right">
                                                    <!-- 3点メニューボタン -->
                                                    <Button Content="⋯" ToolTip="その他の操作" FontSize="16" FontWeight="Bold"
                                                            Style="{StaticResource KanbanActionButton}"
                                                            Background="#E5E7EB" Foreground="#374151" Margin="1"
                                                            Click="MenuButton_Click" Tag="{Binding}">
                                                        <Button.ContextMenu>
                                                            <ContextMenu>
                                                                <MenuItem Header="▶ 実行中に戻す"
                                                                          Click="MenuItem_Click" Tag="MoveCompletedTaskToExecuting"/>
                                                                <MenuItem Header="⏸ 待機中に戻す"
                                                                          Click="MenuItem_Click" Tag="MoveCompletedTaskToWaiting"/>
                                                                <MenuItem Header="↩ 未開始に戻す"
                                                                          Click="MenuItem_Click" Tag="ResetTask"/>
                                                                <Separator/>
                                                                <MenuItem Header="📝 詳細を開く"
                                                                          Click="MenuItem_Click" Tag="OpenTaskDetail"/>
                                                                <MenuItem Header="📋 テンプレート作成"
                                                                          Click="MenuItem_Click" Tag="CreateTemplateFromTask"/>
                                                                <Separator/>
                                                                <MenuItem Header="🗑 削除"
                                                                          Click="MenuItem_Click" Tag="DeleteTask"/>
                                                            </ContextMenu>
                                                        </Button.ContextMenu>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                            
                                            <!-- 完了日時 -->
                                            <TextBlock Grid.Row="1" 
                                                       Text="{Binding CompletedAt, StringFormat={}完了: {0:MM/dd HH:mm}}" 
                                                       FontSize="11" Foreground="Green" Margin="0,4,0,0"/>
                                            
                                            <!-- 画像表示 -->
                                            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" 
                                                         Margin="0,4,0,0" MaxHeight="60"
                                                         Visibility="{Binding HasImages, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <ItemsControl ItemsSource="{Binding ImageAttachments}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border CornerRadius="4" Margin="0,0,4,0" Background="White" BorderThickness="1" BorderBrush="#E5E7EB" Opacity="0.7">
                                                                <Image Source="{Binding}" Width="50" Height="50" 
                                                                       Stretch="UniformToFill" ToolTip="{Binding}"
                                                                       Cursor="Hand">
                                                                    <Image.InputBindings>
                                                                        <MouseBinding MouseAction="LeftClick" 
                                                                                    Command="{Binding DataContext.OpenImageCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                                    CommandParameter="{Binding}"/>
                                                                    </Image.InputBindings>
                                                                </Image>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </ScrollViewer>
                                            
                                            <!-- カテゴリとタグ -->
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,4,0,0">
                                                <Border Background="{StaticResource SecondaryBrush}" CornerRadius="3" Margin="0,0,4,0"
                                                        Visibility="{Binding Category, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBlock Text="{Binding Category}" FontSize="10" 
                                                               Foreground="White" Padding="4,2"/>
                                                </Border>
                                                <TextBlock Text="{Binding TagsText, Mode=OneWay}" FontSize="10" 
                                                           Foreground="Gray" VerticalAlignment="Center"
                                                           Visibility="{Binding TagsText, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}"/>
                                            </StackPanel>
                                            
                                            <!-- リンク -->
                                            <ItemsControl Grid.Row="3" ItemsSource="{Binding Links}" Margin="0,6,0,0"
                                                         Visibility="{Binding Links.Count, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="#F3E8FF" CornerRadius="3" Margin="0,0,3,0" Padding="6,2">
                                                            <Button Content="{Binding Title}" FontSize="9" 
                                                                    Command="{Binding DataContext.OpenLinkItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    CommandParameter="{Binding}"
                                                                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                                                    Foreground="#7C3AED" Background="Transparent" BorderThickness="0" 
                                                                    Cursor="Hand" ToolTip="{Binding Url}"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                            
                                            <!-- 実行時間 -->
                                            <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock Text="{Binding ActualMinutes, Converter={StaticResource MinutesToTimeFormatConverter}, StringFormat={}⏱ {0}}" 
                                                           FontSize="12" Foreground="#10B981" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding EstimatedMinutes, Converter={StaticResource MinutesToTimeFormatConverter}, StringFormat={}/ {0}}" 
                                                           FontSize="12" Foreground="Gray" Margin="2,0,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>