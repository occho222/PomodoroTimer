<Window x:Class="PomodoroTimer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:PomodoroTimer.Models"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        Title="ポモドーロタイマー - カンバンボード" 
        Height="800" Width="1400"
        MinHeight="700" MinWidth="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        Visibility="Visible"
        Background="{StaticResource BackgroundLight}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー部分 -->
        <Border Grid.Row="0" Background="White" Margin="10,10,10,5" CornerRadius="12" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- タイトルとフィルター -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="ポモドーロタイマー - カンバンボード" FontSize="24" FontWeight="Bold" 
                               Foreground="{StaticResource TextLight}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <Grid Width="250" Margin="0,0,10,0">
                            <TextBox x:Name="QuickTaskInput" 
                                     Text="{Binding QuickTaskText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource SearchTextBox}"
                                     ToolTip="タスク名を入力してEnterで即座に追加"
                                     FontWeight="SemiBold" Background="#F0F9FF" BorderBrush="#3B82F6"
                                     KeyDown="QuickTaskInput_KeyDown"
                                     TextChanged="QuickTaskInput_TextChanged"
                                     LostFocus="QuickTaskInput_LostFocus"/>
                            <!-- オートコンプリート候補リスト -->
                            <Popup x:Name="AutoCompletePopup" 
                                   Placement="Bottom" 
                                   PlacementTarget="{Binding ElementName=QuickTaskInput}"
                                   StaysOpen="False"
                                   MaxHeight="150">
                                <Border Background="White" BorderBrush="#3B82F6" BorderThickness="1" CornerRadius="4">
                                    <ListBox x:Name="AutoCompleteList"
                                             ItemsSource="{Binding FilteredTaskHistory}"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             MaxHeight="140"
                                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                                             SelectionChanged="AutoCompleteList_SelectionChanged">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" Padding="8,4" FontSize="12"
                                                          Background="Transparent" Foreground="#1F2937"/>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                        <ListBox.ItemContainerStyle>
                                            <Style TargetType="ListBoxItem">
                                                <Setter Property="Padding" Value="0"/>
                                                <Setter Property="Margin" Value="0"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#EBF8FF"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ListBox.ItemContainerStyle>
                                    </ListBox>
                                </Border>
                            </Popup>
                        </Grid>
                        <TextBox Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource SearchTextBox}" Width="180"
                                 ToolTip="タスク名や説明で検索" Margin="0,0,10,0"/>
                        <ComboBox ItemsSource="{Binding AvailableCategories}"
                                  SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                                  Style="{StaticResource FilterComboBox}" Width="120" Margin="0,0,10,0"/>
                        <ComboBox ItemsSource="{Binding AvailableTags}"
                                  SelectedItem="{Binding SelectedTag, Mode=TwoWay}"
                                  Style="{StaticResource FilterComboBox}" Width="120" Margin="0,0,10,0"/>
                        <Button Content="フィルタークリア" Command="{Binding ClearFiltersCommand}"
                                Style="{StaticResource RoundButton}" Background="Gray" FontSize="11" Padding="8,4"/>
                    </StackPanel>
                </StackPanel>


                <!-- アクションボタン -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    
                    <!-- タスク追加ボタン -->
                    <Button Command="{Binding AddTaskCommand}" Margin="0,0,12,0"
                            Style="{StaticResource RoundButton}" Background="#10B981" Foreground="White"
                            Height="40" Padding="16,8" ToolTip="新しいタスクを追加">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="➕" FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="タスク追加" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- テンプレートボタン -->
                    <Button Command="{Binding CreateTaskFromTemplateCommand}" Margin="0,0,12,0"
                            Style="{StaticResource RoundButton}" Background="#6366F1" Foreground="White"
                            Height="40" Padding="16,8" ToolTip="テンプレートからタスクを作成">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📋" FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="テンプレート" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- テンプレート管理ボタン -->
                    <Button Command="{Binding OpenTemplateManagerCommand}" Margin="0,0,12,0"
                            Style="{StaticResource RoundButton}" Background="#8B5CF6" Foreground="White"
                            Height="40" Padding="16,8" ToolTip="テンプレートの管理">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚙️" FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="管理" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- Microsoft Graph インポートボタン -->
                    <Button Command="{Binding ImportFromMicrosoftGraphCommand}" Margin="0,0,12,0"
                            Style="{StaticResource RoundButton}" Background="#F59E0B" Foreground="White"
                            Height="40" Padding="16,8" ToolTip="Microsoft Graphからタスクをインポート">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📊" FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="インポート" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- 統計画面ボタン -->
                    <Button Command="{Binding OpenStatisticsCommand}" Margin="0,0,12,0"
                            Style="{StaticResource RoundButton}" Background="#3B82F6" Foreground="White"
                            Height="40" Padding="16,8" ToolTip="統計とレポートを表示">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📈" FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="統計" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- プロジェクト・タグ管理ボタン -->
                    <Button Command="{Binding OpenProjectTagManagerCommand}" Margin="0,0,12,0"
                            Style="{StaticResource RoundButton}" Background="#EC4899" Foreground="White"
                            Height="40" Padding="16,8" ToolTip="プロジェクトとタグの管理">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🏷️" FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="管理" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- 設定ボタン -->
                    <Button Command="{Binding OpenSettingsCommand}"
                            Style="{StaticResource RoundButton}" Background="#6B7280" Foreground="White"
                            Height="40" Padding="16,8" ToolTip="アプリの設定">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚙️" FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="設定" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- タイマーコントロール -->
        <Border Grid.Row="1" Background="White" Margin="10,5,10,5" CornerRadius="12" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- タイマー表示 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding TimeRemaining}" FontSize="36" FontWeight="Bold" 
                               Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center"/>
                    <StackPanel Margin="20,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="{Binding SessionTypeText}" FontSize="14" Foreground="Gray"/>
                        <ProgressBar Value="{Binding ProgressValue, Mode=OneWay}" Maximum="100" 
                                     Height="8" Width="200" Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- 統計情報 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0">
                    <Border Style="{StaticResource StatisticCard}" Background="{StaticResource PrimaryBrush}" Margin="0,0,8,0">
                        <StackPanel>
                            <TextBlock Text="完了ポモドーロ" Foreground="White" FontSize="12"/>
                            <TextBlock Text="{Binding CompletedPomodoros}" Foreground="White" 
                                       FontSize="24" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource StatisticCard}" Background="{StaticResource SecondaryBrush}" Margin="8,0,0,0">
                        <StackPanel>
                            <TextBlock Text="完了タスク" Foreground="White" FontSize="12"/>
                            <TextBlock Text="{Binding CompletedTasks}" Foreground="White" 
                                       FontSize="24" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- コントロールボタン -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="{Binding StartPauseButtonText}" Command="{Binding StartPauseCommand}"
                            Style="{StaticResource RoundButton}" Width="100" Height="40" FontSize="14" Margin="0,0,8,0"/>
                    <Button Content="停止" Command="{Binding StopCommand}"
                            Style="{StaticResource RoundButton}" Background="Gray" Width="80" Height="40" FontSize="14" Margin="0,0,8,0"/>
                    <Button Content="スキップ" Command="{Binding SkipCommand}"
                            Style="{StaticResource RoundButton}" Background="{StaticResource SecondaryBrush}" 
                            Width="80" Height="40" FontSize="14" Margin="0,0,8,0"/>
                    
                    <!-- 時間調整ボタン -->
                    <Button Content="+1分" Command="{Binding AddOneMinuteCommand}" ToolTip="タイマーに1分追加"
                            Style="{StaticResource RoundButton}" Background="#10B981" 
                            Width="50" Height="40" FontSize="12" Margin="0,0,4,0"/>
                    <Button Content="-1分" Command="{Binding SubtractOneMinuteCommand}" ToolTip="タイマーから1分減らす"
                            Style="{StaticResource RoundButton}" Background="#EF4444" 
                            Width="50" Height="40" FontSize="12" Margin="0,0,4,0"/>
                    <Button Content="+10秒" Command="{Binding AddTenSecondsCommand}" ToolTip="タイマーに10秒追加"
                            Style="{StaticResource RoundButton}" Background="#3B82F6" 
                            Width="50" Height="40" FontSize="12" Margin="0,0,4,0"/>
                    <Button Content="-10秒" Command="{Binding SubtractTenSecondsCommand}" ToolTip="タイマーから10秒減らす"
                            Style="{StaticResource RoundButton}" Background="#F59E0B" 
                            Width="50" Height="40" FontSize="12"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- カンバンボード -->
        <Grid Grid.Row="2" Margin="10,5,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 未開始タスク列 -->
            <Border Grid.Column="0" Background="White" Margin="0,0,3,0" CornerRadius="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 列ヘッダー -->
                    <Border Grid.Row="0" Background="#F8FAFC" CornerRadius="12,12,0,0" Padding="20,15">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="12" Height="12" Fill="#94A3B8" VerticalAlignment="Center"/>
                                <TextBlock Text="未開始" FontSize="16" FontWeight="Bold" Margin="8,0,0,0" 
                                           Foreground="{StaticResource TextLight}"/>
                            </StackPanel>
                            <TextBlock Text="{Binding TodoTasks.Count, StringFormat={}タスク数: {0}}" 
                                       FontSize="12" Foreground="Gray" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- タスクリスト -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="10">
                        <ItemsControl ItemsSource="{Binding TodoTasks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource KanbanTaskCard}" Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- タスクヘッダー -->
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Ellipse Style="{StaticResource PriorityIndicator}"
                                                                 Fill="{Binding Priority, Converter={StaticResource PriorityToColorConverter}}"/>
                                                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="14"
                                                                   VerticalAlignment="Center" TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                    <!-- 期限表示 -->
                                                    <TextBlock Text="{Binding DueDateText}" FontSize="11" FontWeight="SemiBold"
                                                               Foreground="{Binding DueDateColor}" Margin="20,2,0,0"
                                                               Visibility="{Binding DueDateText, Converter={StaticResource StringToVisibilityConverter}}"/>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                    <Button Content="▶" ToolTip="開始"
                                                            Command="{Binding DataContext.StartTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource KanbanActionButton}"
                                                            Background="{StaticResource AccentBrush}" Margin="2,0"/>
                                                    <Button Content="✏" ToolTip="編集"
                                                            Command="{Binding DataContext.EditTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource KanbanActionButton}"
                                                            Background="{StaticResource WarningBrush}" Margin="2,0"/>
                                                    <Button Content="📋" ToolTip="テンプレート作成"
                                                            Command="{Binding DataContext.CreateTemplateFromTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource KanbanActionButton}"
                                                            Background="{StaticResource SecondaryBrush}" Margin="2,0"/>
                                                    <Button Content="🗑" ToolTip="削除"
                                                            Command="{Binding DataContext.DeleteTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource KanbanActionButton}"
                                                            Background="{StaticResource ErrorBrush}" Margin="2,0"/>
                                                    <Button Content="📝" ToolTip="詳細"
                                                            Command="{Binding DataContext.OpenTaskDetailCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource KanbanActionButton}"
                                                            Background="#6366F1" Margin="2,0"/>
                                                </StackPanel>
                                            </Grid>
                                            
                                            <!-- 説明 -->
                                            <TextBlock Grid.Row="1" Text="{Binding Description}" 
                                                       FontSize="12" Foreground="Gray" TextWrapping="Wrap" Margin="0,8,0,0"
                                                       Visibility="{Binding Description, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            
                                            <!-- カテゴリとタグ -->
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                                                <Border Background="{StaticResource SecondaryBrush}" CornerRadius="3" Margin="0,0,4,0"
                                                        Visibility="{Binding Category, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBlock Text="{Binding Category}" FontSize="10" 
                                                               Foreground="White" Padding="4,2"/>
                                                </Border>
                                                <TextBlock Text="{Binding TagsText, Mode=OneWay}" FontSize="10" 
                                                           Foreground="Gray" VerticalAlignment="Center"
                                                           Visibility="{Binding TagsText, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}"/>
                                            </StackPanel>
                                            
                                            <!-- ポモドーロ情報と進捗 -->
                                            <Grid Grid.Row="3" Margin="0,8,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding CompletedPomodoros, StringFormat={}🍅 {0}}" 
                                                           FontSize="12" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="1" 
                                                           Text="{Binding EstimatedPomodoros, StringFormat={}/ {0}}" 
                                                           FontSize="12" Foreground="Gray" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- 待機中タスク列 -->
            <Border Grid.Column="1" Background="White" Margin="3,0" CornerRadius="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 列ヘッダー -->
                    <Border Grid.Row="0" Background="#EBF8FF" CornerRadius="12,12,0,0" Padding="20,15">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="12" Height="12" Fill="#3B82F6" VerticalAlignment="Center"/>
                                <TextBlock Text="待機中" FontSize="16" FontWeight="Bold" Margin="8,0,0,0" 
                                           Foreground="{StaticResource TextLight}"/>
                            </StackPanel>
                            <TextBlock Text="{Binding WaitingTasks.Count, StringFormat={}タスク数: {0}}" 
                                       FontSize="12" Foreground="Gray" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- タスクリスト -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="10">
                        <ItemsControl ItemsSource="{Binding WaitingTasks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource KanbanTaskCard}" Margin="0,0,0,10" BorderBrush="#3B82F6">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- タスクヘッダー -->
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Ellipse Style="{StaticResource PriorityIndicator}"
                                                                 Fill="{Binding Priority, Converter={StaticResource PriorityToColorConverter}}"/>
                                                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="14"
                                                                   VerticalAlignment="Center" TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                    <!-- 期限表示 -->
                                                    <TextBlock Text="{Binding DueDateText}" FontSize="11" FontWeight="SemiBold"
                                                               Foreground="{Binding DueDateColor}" Margin="20,2,0,0"
                                                               Visibility="{Binding DueDateText, Converter={StaticResource StringToVisibilityConverter}}"/>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                    <Button Content="▶" ToolTip="25分セッション開始"
                                                            Command="{Binding DataContext.ExecuteTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource KanbanActionButton}"
                                                            Background="#F59E0B" Margin="2,0"/>
                                                    <Button Content="✓" ToolTip="完了"
                                                            Command="{Binding DataContext.CompleteTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource KanbanActionButton}"
                                                            Background="{StaticResource AccentBrush}" Margin="2,0"/>
                                                    <Button Content="⏸" ToolTip="一時停止"
                                                            Command="{Binding DataContext.MoveTaskToTodoCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource KanbanActionButton}"
                                                            Background="Orange" Margin="2,0"/>
                                                    <Button Content="📋" ToolTip="テンプレート作成"
                                                            Command="{Binding DataContext.CreateTemplateFromTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource KanbanActionButton}"
                                                            Background="{StaticResource SecondaryBrush}" Margin="2,0"/>
                                                    <Button Content="🗑" ToolTip="削除"
                                                            Command="{Binding DataContext.DeleteTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource KanbanActionButton}"
                                                            Background="{StaticResource ErrorBrush}" Margin="2,0"/>
                                                    <Button Content="📝" ToolTip="詳細"
                                                            Command="{Binding DataContext.OpenTaskDetailCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource KanbanActionButton}"
                                                            Background="#6366F1" Margin="2,0"/>
                                                </StackPanel>
                                            </Grid>
                                            
                                            <!-- 説明 -->
                                            <TextBlock Grid.Row="1" Text="{Binding Description}" 
                                                       FontSize="12" Foreground="Gray" TextWrapping="Wrap" Margin="0,8,0,0"
                                                       Visibility="{Binding Description, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            
                                            <!-- カテゴリとタグ -->
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                                                <Border Background="{StaticResource SecondaryBrush}" CornerRadius="3" Margin="0,0,4,0"
                                                        Visibility="{Binding Category, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBlock Text="{Binding Category}" FontSize="10" 
                                                               Foreground="White" Padding="4,2"/>
                                                </Border>
                                                <TextBlock Text="{Binding TagsText, Mode=OneWay}" FontSize="10" 
                                                           Foreground="Gray" VerticalAlignment="Center"
                                                           Visibility="{Binding TagsText, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}"/>
                                            </StackPanel>
                                            
                                            <!-- ポモドーロ情報と進捗 -->
                                            <Grid Grid.Row="3" Margin="0,8,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                    <TextBlock Text="{Binding CompletedPomodoros, StringFormat={}🍅 {0}}" 
                                                               FontSize="12" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding EstimatedPomodoros, StringFormat={}/ {0}}" 
                                                               FontSize="12" Foreground="Gray" VerticalAlignment="Center" Margin="2,0,0,0"/>
                                                </StackPanel>
                                                
                                                <ProgressBar Grid.Column="1" 
                                                             Value="{Binding ProgressPercentage, Mode=OneWay}" 
                                                             Maximum="100" Width="60" Height="6"/>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- 実行中タスク列 -->
            <Border Grid.Column="2" Background="White" Margin="3,0" CornerRadius="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 列ヘッダー -->
                    <Border Grid.Row="0" Background="#FEF3C7" CornerRadius="12,12,0,0" Padding="20,15">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="12" Height="12" Fill="#F59E0B" VerticalAlignment="Center"/>
                                <TextBlock Text="実行中" FontSize="16" FontWeight="Bold" Margin="8,0,0,0" 
                                           Foreground="{StaticResource TextLight}"/>
                            </StackPanel>
                            <TextBlock Text="{Binding CurrentTask, Converter={StaticResource BooleanToVisibilityConverter}, StringFormat={}{0:実行中}, FallbackValue=待機中}" 
                                       FontSize="12" Foreground="Gray" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- 実行中タスク詳細カード -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="10">
                        <StackPanel>
                            <Border Style="{StaticResource KanbanTaskCard}" Margin="0,0,0,10" BorderBrush="#F59E0B" 
                                    Background="#FFFBF0" MinHeight="400"
                                    Visibility="{Binding CurrentTask, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- タスクヘッダー -->
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <Ellipse Style="{StaticResource PriorityIndicator}"
                                                     Fill="{Binding CurrentTask.Priority, Converter={StaticResource PriorityToColorConverter}}"/>
                                            <TextBlock Text="⏱️" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding CurrentTask.Title}" FontWeight="Bold" FontSize="16"
                                                       VerticalAlignment="Center" TextWrapping="Wrap" Foreground="#1F2937"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <Button Content="⏹" ToolTip="セッション停止"
                                                    Command="{Binding StopTaskExecutionCommand}"
                                                    CommandParameter="{Binding CurrentTask}"
                                                    Style="{StaticResource KanbanActionButton}"
                                                    Background="#EF4444" Margin="2,0" Width="32" Height="28"/>
                                            <Button Content="✓" ToolTip="完了"
                                                    Command="{Binding CompleteTaskCommand}"
                                                    CommandParameter="{Binding CurrentTask}"
                                                    Style="{StaticResource KanbanActionButton}"
                                                    Background="{StaticResource AccentBrush}" Margin="2,0" Width="32" Height="28"/>
                                            <Button Content="📝" ToolTip="詳細編集"
                                                    Command="{Binding OpenTaskDetailCommand}"
                                                    CommandParameter="{Binding CurrentTask}"
                                                    Style="{StaticResource KanbanActionButton}"
                                                    Background="#6366F1" Margin="2,0" Width="32" Height="28"/>
                                        </StackPanel>
                                    </Grid>
                                    
                                    <!-- セッション情報 -->
                                    <Border Grid.Row="1" Background="#F59E0B" CornerRadius="6" Margin="0,12,0,0" Padding="12,8">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="🍅" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding SessionTypeText}" FontSize="14" FontWeight="SemiBold" 
                                                       Foreground="White" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding TimeRemaining}" FontSize="18" FontWeight="Bold" 
                                                       Foreground="White" VerticalAlignment="Center" Margin="12,0,0,0"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- 基本説明 -->
                                    <TextBlock Grid.Row="2" Text="{Binding CurrentTask.Description}" 
                                               FontSize="13" Foreground="#374151" TextWrapping="Wrap" Margin="0,12,0,0"
                                               Visibility="{Binding CurrentTask.Description, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    
                                    <!-- 詳細説明 -->
                                    <ScrollViewer Grid.Row="3" MaxHeight="100" Margin="0,8,0,0"
                                                  Visibility="{Binding CurrentTask.DetailedDescription, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                  VerticalScrollBarVisibility="Auto">
                                        <TextBlock Text="{Binding CurrentTask.DetailedDescription}" 
                                                   FontSize="12" Foreground="#4B5563" TextWrapping="Wrap"
                                                   Background="#F9FAFB" Padding="8" LineHeight="18"/>
                                    </ScrollViewer>
                                    
                                    <!-- チェックリスト -->
                                    <StackPanel Grid.Row="4" Margin="0,12,0,0"
                                                Visibility="{Binding CurrentTask.Checklist.Count, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock Text="📋 やることリスト" FontSize="14" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,8"/>
                                        <ScrollViewer MaxHeight="120" VerticalScrollBarVisibility="Auto">
                                            <ItemsControl ItemsSource="{Binding CurrentTask.Checklist}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="#F9FAFB" CornerRadius="4" Margin="0,2" Padding="8,4">
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="{Binding IsChecked, Converter={StaticResource BooleanToCheckConverter}}" 
                                                                           FontSize="12" Margin="0,0,8,0" VerticalAlignment="Top"/>
                                                                <TextBlock Text="{Binding Text}" FontSize="12" TextWrapping="Wrap" 
                                                                           VerticalAlignment="Top" Foreground="#374151">
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="TextBlock">
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding IsChecked}" Value="True">
                                                                                    <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                                                    <Setter Property="Foreground" Value="#9CA3AF"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </TextBlock.Style>
                                                                </TextBlock>
                                                            </StackPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </StackPanel>
                                    
                                    <!-- カテゴリとタグ -->
                                    <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,12,0,0">
                                        <Border Background="{StaticResource SecondaryBrush}" CornerRadius="4" Margin="0,0,8,0" Padding="8,4"
                                                Visibility="{Binding CurrentTask.Category, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <TextBlock Text="{Binding CurrentTask.Category}" FontSize="11" 
                                                       Foreground="White" FontWeight="SemiBold"/>
                                        </Border>
                                        <TextBlock Text="{Binding CurrentTask.TagsText, Mode=OneWay}" FontSize="11" 
                                                   Foreground="#6B7280" VerticalAlignment="Center"
                                                   Visibility="{Binding CurrentTask.TagsText, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}"/>
                                    </StackPanel>
                                    
                                    <!-- 進捗とポモドーロ情報 -->
                                    <Grid Grid.Row="6" Margin="0,12,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- ポモドーロ数 -->
                                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                            <TextBlock Text="🍅 ポモドーロ:" FontSize="13" FontWeight="SemiBold" 
                                                       Foreground="#374151" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding CurrentTask.CompletedPomodoros}" FontSize="16" FontWeight="Bold" 
                                                       Foreground="#F59E0B" VerticalAlignment="Center" Margin="8,0,4,0"/>
                                            <TextBlock Text="/" FontSize="13" Foreground="#9CA3AF" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding CurrentTask.EstimatedPomodoros}" FontSize="13" 
                                                       Foreground="#6B7280" VerticalAlignment="Center" Margin="4,0,0,0"/>
                                        </StackPanel>
                                        
                                        <!-- 進捗バー -->
                                        <StackPanel Grid.Row="1" Margin="0,0,0,8">
                                            <TextBlock Text="{Binding CurrentTask.ProgressPercentage, StringFormat={}進捗: {0:F0}%, Mode=OneWay}" 
                                                       FontSize="12" Foreground="#6B7280" Margin="0,0,0,4"/>
                                            <ProgressBar Value="{Binding CurrentTask.ProgressPercentage, Mode=OneWay}" Maximum="100" 
                                                         Height="8" Background="#E5E7EB" Foreground="#F59E0B"/>
                                        </StackPanel>
                                        
                                        <!-- 期限・添付ファイル情報 -->
                                        <StackPanel Grid.Row="2">
                                            <TextBlock Text="{Binding CurrentTask.DueDate, StringFormat={}⏰ 期限: {0:MM/dd HH:mm}, Mode=OneWay}" 
                                                       FontSize="11" Foreground="#EF4444" Margin="0,0,0,4"
                                                       Visibility="{Binding CurrentTask.DueDate, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}"/>
                                            <StackPanel Orientation="Horizontal"
                                                        Visibility="{Binding CurrentTask.AttachmentCount, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">
                                                <TextBlock Text="📎" FontSize="12" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding CurrentTask.AttachmentCount, StringFormat={}{0}個の添付ファイル, Mode=OneWay}" 
                                                           FontSize="11" Foreground="#6B7280" Margin="4,0,0,0"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>
                            
                            <!-- タスクが選択されていない場合の表示 -->
                            <Border Background="#F9FAFB" CornerRadius="8" Padding="40,60" 
                                    Visibility="{Binding CurrentTask, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="⏰" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16" Foreground="#D1D5DB"/>
                                    <TextBlock Text="実行中のタスクはありません" FontSize="16" FontWeight="SemiBold" 
                                               HorizontalAlignment="Center" Foreground="#6B7280" Margin="0,0,0,8"/>
                                    <TextBlock Text="待機中タスクから「▶」ボタンで" FontSize="12" 
                                               HorizontalAlignment="Center" Foreground="#9CA3AF" Margin="0,0,0,4"/>
                                    <TextBlock Text="25分セッションを開始してください" FontSize="12" 
                                               HorizontalAlignment="Center" Foreground="#9CA3AF"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- 完了タスク列 -->
            <Border Grid.Column="3" Background="White" Margin="3,0,0,0" CornerRadius="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 列ヘッダー -->
                    <Border Grid.Row="0" Background="#F0FDF4" CornerRadius="12,12,0,0" Padding="20,15">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="12" Height="12" Fill="#10B981" VerticalAlignment="Center"/>
                                <TextBlock Text="完了" FontSize="16" FontWeight="Bold" Margin="8,0,0,0" 
                                           Foreground="{StaticResource TextLight}"/>
                            </StackPanel>
                            <TextBlock Text="{Binding DoneTasksCollection.Count, StringFormat={}タスク数: {0}}" 
                                       FontSize="12" Foreground="Gray" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- タスクリスト -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="10">
                        <ItemsControl ItemsSource="{Binding DoneTasksCollection}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource KanbanTaskCard}" Margin="0,0,0,10" BorderBrush="#10B981" Opacity="0.8">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- タスクヘッダー -->
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                    <TextBlock Text="✅" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                    <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="14"
                                                               VerticalAlignment="Center" TextWrapping="Wrap"
                                                               TextDecorations="Strikethrough"/>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                    <Button Content="↩" ToolTip="未完了に戻す"
                                                            Command="{Binding DataContext.ResetTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource KanbanActionButton}"
                                                            Background="Orange" Margin="2,0"/>
                                                    <Button Content="📋" ToolTip="テンプレート作成"
                                                            Command="{Binding DataContext.CreateTemplateFromTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource KanbanActionButton}"
                                                            Background="{StaticResource SecondaryBrush}" Margin="2,0"/>
                                                    <Button Content="🗑" ToolTip="削除"
                                                            Command="{Binding DataContext.DeleteTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource KanbanActionButton}"
                                                            Background="{StaticResource ErrorBrush}" Margin="2,0"/>
                                                    <Button Content="📝" ToolTip="詳細"
                                                            Command="{Binding DataContext.OpenTaskDetailCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource KanbanActionButton}"
                                                            Background="#6366F1" Margin="2,0"/>
                                                </StackPanel>
                                            </Grid>
                                            
                                            <!-- 完了日時 -->
                                            <TextBlock Grid.Row="1" 
                                                       Text="{Binding CompletedAt, StringFormat={}完了: {0:MM/dd HH:mm}}" 
                                                       FontSize="11" Foreground="Green" Margin="0,4,0,0"/>
                                            
                                            <!-- カテゴリとタグ -->
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,4,0,0">
                                                <Border Background="{StaticResource SecondaryBrush}" CornerRadius="3" Margin="0,0,4,0"
                                                        Visibility="{Binding Category, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBlock Text="{Binding Category}" FontSize="10" 
                                                               Foreground="White" Padding="4,2"/>
                                                </Border>
                                            </StackPanel>
                                            
                                            <!-- ポモドーロ情報 -->
                                            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock Text="{Binding CompletedPomodoros, StringFormat={}🍅 {0}}" 
                                                           FontSize="12" Foreground="Green"/>
                                                <TextBlock Text="{Binding EstimatedPomodoros, StringFormat={}/ {0} 完了}" 
                                                           FontSize="12" Foreground="Gray" Margin="4,0,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>