<Window x:Class="PomodoroTimer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pomodoro Timer" 
        Height="700" Width="1200"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        Visibility="Visible"
        Background="{StaticResource BackgroundLight}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" Margin="10" CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Today's Tasks" FontSize="20" FontWeight="Bold" 
                           Margin="15,15,15,10" Foreground="{StaticResource TextLight}"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Tasks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource TaskItemStyle}" 
                                        MouseLeftButtonDown="TaskItem_MouseLeftButtonDown"
                                        AllowDrop="True" 
                                        Drop="TaskItem_Drop"
                                        DragOver="TaskItem_DragOver">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel>
                                            <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="14"/>
                                            <TextBlock Text="{Binding EstimatedPomodoros, StringFormat={}Estimated: {0} Pomodoros}" 
                                                       FontSize="12" Foreground="Gray"/>
                                            <TextBlock Text="{Binding CompletedPomodoros, StringFormat={}Completed: {0} Pomodoros}" 
                                                       FontSize="12" Foreground="Green"/>
                                            
                                            <ProgressBar Value="{Binding ProgressPercentage, Mode=OneWay}" 
                                                         Maximum="100" Height="4" Margin="0,2,0,0"
                                                         Background="LightGray" 
                                                         Foreground="{StaticResource PrimaryBrush}"/>
                                        </StackPanel>
                                        
                                        <Button Grid.Column="1" Content="Start" 
                                                Command="{Binding DataContext.StartTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource RoundButton}"
                                                Padding="10,5" FontSize="12"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <Button Grid.Row="2" Content="+ Add Task" 
                        Command="{Binding AddTaskCommand}"
                        Style="{StaticResource RoundButton}" 
                        Margin="15" HorizontalAlignment="Stretch"/>
            </Grid>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Background="White" Margin="10" CornerRadius="10" Padding="20">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="{Binding CurrentTask.Title, FallbackValue=Select a task}" 
                               FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding SessionTypeText}" FontSize="16" 
                               Foreground="Gray" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <Viewbox Grid.Row="1" Margin="40">
                <Grid Width="300" Height="300">
                    <Ellipse Stroke="#E0E0E0" StrokeThickness="20" Fill="Transparent"/>
                    <Path x:Name="ProgressPath" Stroke="{StaticResource PrimaryBrush}" 
                          StrokeThickness="20" Fill="Transparent">
                        <Path.Data>
                            <PathGeometry>
                                <PathFigure StartPoint="150,30">
                                    <ArcSegment Size="120,120" Point="{Binding ProgressPoint, Mode=OneWay}" 
                                                IsLargeArc="{Binding IsLargeArc, Mode=OneWay}" 
                                                SweepDirection="Clockwise"/>
                                </PathFigure>
                            </PathGeometry>
                        </Path.Data>
                    </Path>

                    <TextBlock Text="{Binding TimeRemaining}" 
                               FontSize="48" FontWeight="Bold"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Grid>
            </Viewbox>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
                <Button Content="{Binding StartPauseButtonText}" 
                        Command="{Binding StartPauseCommand}"
                        Style="{StaticResource RoundButton}" 
                        Width="120" Height="50" FontSize="18"/>
                <Button Content="Stop" 
                        Command="{Binding StopCommand}"
                        Style="{StaticResource RoundButton}" 
                        Background="Gray" Width="120" Height="50" FontSize="18"/>
                <Button Content="Skip" 
                        Command="{Binding SkipCommand}"
                        Style="{StaticResource RoundButton}" 
                        Background="{StaticResource SecondaryBrush}" 
                        Width="120" Height="50" FontSize="18"/>
            </StackPanel>
        </Grid>

        <Border Grid.Column="2" Background="White" Margin="10" CornerRadius="10" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Statistics" FontSize="20" FontWeight="Bold" 
                           Margin="0,0,0,15" Foreground="{StaticResource TextLight}"/>

                <StackPanel Grid.Row="1">
                    <Border Background="{StaticResource PrimaryBrush}" CornerRadius="8" 
                            Padding="15" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Completed Pomodoros" Foreground="White" FontSize="14"/>
                            <TextBlock Text="{Binding CompletedPomodoros}" Foreground="White" 
                                       FontSize="32" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <Border Background="{StaticResource SecondaryBrush}" CornerRadius="8" 
                            Padding="15" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Completed Tasks" Foreground="White" FontSize="14"/>
                            <TextBlock Text="{Binding CompletedTasks}" Foreground="White" 
                                       FontSize="32" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <Border Background="LightGray" CornerRadius="8" Padding="15">
                        <StackPanel>
                            <TextBlock Text="Focus Time" Foreground="White" FontSize="14"/>
                            <TextBlock Text="{Binding TotalFocusTime}" Foreground="White" 
                                       FontSize="24" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <Button Grid.Row="2" Content="Settings" 
                        Command="{Binding OpenSettingsCommand}"
                        Style="{StaticResource RoundButton}" 
                        Background="Gray" HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>
</Window>