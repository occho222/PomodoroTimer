<Window x:Class="PomodoroTimer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:PomodoroTimer.Models"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        Title="ポモドーロタイマー - カンバンボード" 
        Height="800" Width="1400"
        MinHeight="700" MinWidth="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        Visibility="Visible"
        Background="{StaticResource BackgroundLight}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー部分 -->
        <Border Grid.Row="0" Background="White" Margin="10,10,10,5" CornerRadius="12" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- タイトルとフィルター -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="ポモドーロタイマー - カンバンボード" FontSize="24" FontWeight="Bold" 
                               Foreground="{StaticResource TextLight}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBox Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource SearchTextBox}" Width="200"
                                 ToolTip="タスク名や説明で検索" Margin="0,0,10,0"/>
                        <ComboBox ItemsSource="{Binding AvailableCategories}"
                                  SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                                  Style="{StaticResource FilterComboBox}" Width="120" Margin="0,0,10,0"/>
                        <ComboBox ItemsSource="{Binding AvailableTags}"
                                  SelectedItem="{Binding SelectedTag, Mode=TwoWay}"
                                  Style="{StaticResource FilterComboBox}" Width="120" Margin="0,0,10,0"/>
                        <Button Content="フィルタークリア" Command="{Binding ClearFiltersCommand}"
                                Style="{StaticResource RoundButton}" Background="Gray" FontSize="11" Padding="8,4"/>
                    </StackPanel>
                </StackPanel>

                <!-- 現在のタスク表示 -->
                <StackPanel Grid.Column="1" Margin="20,0">
                    <TextBlock Text="現在のタスク" FontSize="14" Foreground="Gray"/>
                    <TextBlock Text="{Binding CurrentTask.Title, FallbackValue=未選択}" 
                               FontSize="16" FontWeight="Bold" MaxWidth="200" TextWrapping="Wrap"/>
                    <TextBlock Text="{Binding SessionTypeText}" FontSize="12" Foreground="Gray"/>
                </StackPanel>

                <!-- アクションボタン -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="+ タスク追加" Command="{Binding AddTaskCommand}"
                            Style="{StaticResource RoundButton}" Margin="0,0,8,0"/>
                    <Button Content="Microsoft Graph インポート" Command="{Binding ImportFromMicrosoftGraphCommand}"
                            Style="{StaticResource RoundButton}" Background="{StaticResource WarningBrush}" 
                            FontSize="10" Margin="0,0,8,0"/>
                    <Button Content="統計画面" Command="{Binding OpenStatisticsCommand}"
                            Style="{StaticResource RoundButton}" Background="{StaticResource AccentBrush}" Margin="0,0,8,0"/>
                    <Button Content="設定" Command="{Binding OpenSettingsCommand}"
                            Style="{StaticResource RoundButton}" Background="Gray"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- タイマーコントロール -->
        <Border Grid.Row="1" Background="White" Margin="10,5,10,5" CornerRadius="12" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- タイマー表示 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding TimeRemaining}" FontSize="36" FontWeight="Bold" 
                               Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center"/>
                    <StackPanel Margin="20,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="{Binding SessionTypeText}" FontSize="14" Foreground="Gray"/>
                        <ProgressBar Value="{Binding ProgressValue, Mode=OneWay}" Maximum="100" 
                                     Height="8" Width="200" Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- 統計情報 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0">
                    <Border Style="{StaticResource StatisticCard}" Background="{StaticResource PrimaryBrush}" Margin="0,0,8,0">
                        <StackPanel>
                            <TextBlock Text="完了ポモドーロ" Foreground="White" FontSize="12"/>
                            <TextBlock Text="{Binding CompletedPomodoros}" Foreground="White" 
                                       FontSize="24" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource StatisticCard}" Background="{StaticResource SecondaryBrush}" Margin="8,0,0,0">
                        <StackPanel>
                            <TextBlock Text="完了タスク" Foreground="White" FontSize="12"/>
                            <TextBlock Text="{Binding CompletedTasks}" Foreground="White" 
                                       FontSize="24" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- コントロールボタン -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="{Binding StartPauseButtonText}" Command="{Binding StartPauseCommand}"
                            Style="{StaticResource RoundButton}" Width="100" Height="40" FontSize="14" Margin="0,0,8,0"/>
                    <Button Content="停止" Command="{Binding StopCommand}"
                            Style="{StaticResource RoundButton}" Background="Gray" Width="80" Height="40" FontSize="14" Margin="0,0,8,0"/>
                    <Button Content="スキップ" Command="{Binding SkipCommand}"
                            Style="{StaticResource RoundButton}" Background="{StaticResource SecondaryBrush}" 
                            Width="80" Height="40" FontSize="14"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- カンバンボード -->
        <Grid Grid.Row="2" Margin="10,5,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 未開始タスク列 -->
            <Border Grid.Column="0" Background="White" Margin="0,0,5,0" CornerRadius="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 列ヘッダー -->
                    <Border Grid.Row="0" Background="#F8FAFC" CornerRadius="12,12,0,0" Padding="20,15">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="12" Height="12" Fill="#94A3B8" VerticalAlignment="Center"/>
                                <TextBlock Text="未開始" FontSize="16" FontWeight="Bold" Margin="8,0,0,0" 
                                           Foreground="{StaticResource TextLight}"/>
                            </StackPanel>
                            <TextBlock Text="{Binding TodoTasks.Count, StringFormat={}タスク数: {0}}" 
                                       FontSize="12" Foreground="Gray" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- タスクリスト -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="10">
                        <ItemsControl ItemsSource="{Binding TodoTasks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource KanbanTaskCard}" Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- タスクヘッダー -->
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                    <Ellipse Style="{StaticResource PriorityIndicator}"
                                                             Fill="{Binding Priority, Converter={StaticResource PriorityToColorConverter}}"/>
                                                    <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="14"
                                                               VerticalAlignment="Center" TextWrapping="Wrap"/>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                    <Button Content="▶" ToolTip="開始"
                                                            Command="{Binding DataContext.StartTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource KanbanActionButton}"
                                                            Background="{StaticResource AccentBrush}" Margin="2,0"/>
                                                    <Button Content="✏" ToolTip="編集"
                                                            Command="{Binding DataContext.EditTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource KanbanActionButton}"
                                                            Background="{StaticResource WarningBrush}" Margin="2,0"/>
                                                </StackPanel>
                                            </Grid>
                                            
                                            <!-- 説明 -->
                                            <TextBlock Grid.Row="1" Text="{Binding Description}" 
                                                       FontSize="12" Foreground="Gray" TextWrapping="Wrap" Margin="0,8,0,0"
                                                       Visibility="{Binding Description, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            
                                            <!-- カテゴリとタグ -->
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                                                <Border Background="{StaticResource SecondaryBrush}" CornerRadius="3" Margin="0,0,4,0"
                                                        Visibility="{Binding Category, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBlock Text="{Binding Category}" FontSize="10" 
                                                               Foreground="White" Padding="4,2"/>
                                                </Border>
                                                <TextBlock Text="{Binding TagsText}" FontSize="10" 
                                                           Foreground="Gray" VerticalAlignment="Center"
                                                           Visibility="{Binding TagsText, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            </StackPanel>
                                            
                                            <!-- ポモドーロ情報と進捗 -->
                                            <Grid Grid.Row="3" Margin="0,8,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding CompletedPomodoros, StringFormat={}🍅 {0}}" 
                                                           FontSize="12" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="1" 
                                                           Text="{Binding EstimatedPomodoros, StringFormat={}/ {0}}" 
                                                           FontSize="12" Foreground="Gray" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- 進行中タスク列 -->
            <Border Grid.Column="1" Background="White" Margin="5,0" CornerRadius="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 列ヘッダー -->
                    <Border Grid.Row="0" Background="#EBF8FF" CornerRadius="12,12,0,0" Padding="20,15">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="12" Height="12" Fill="#3B82F6" VerticalAlignment="Center"/>
                                <TextBlock Text="進行中" FontSize="16" FontWeight="Bold" Margin="8,0,0,0" 
                                           Foreground="{StaticResource TextLight}"/>
                            </StackPanel>
                            <TextBlock Text="{Binding InProgressTasks.Count, StringFormat={}タスク数: {0}}" 
                                       FontSize="12" Foreground="Gray" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- タスクリスト -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="10">
                        <ItemsControl ItemsSource="{Binding InProgressTasks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource KanbanTaskCard}" Margin="0,0,0,10" BorderBrush="#3B82F6">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- タスクヘッダー -->
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                    <Ellipse Style="{StaticResource PriorityIndicator}"
                                                             Fill="{Binding Priority, Converter={StaticResource PriorityToColorConverter}}"/>
                                                    <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="14"
                                                               VerticalAlignment="Center" TextWrapping="Wrap"/>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                    <Button Content="✓" ToolTip="完了"
                                                            Command="{Binding DataContext.CompleteTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource KanbanActionButton}"
                                                            Background="{StaticResource AccentBrush}" Margin="2,0"/>
                                                    <Button Content="⏸" ToolTip="一時停止"
                                                            Command="{Binding DataContext.MoveTaskToTodoCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource KanbanActionButton}"
                                                            Background="Orange" Margin="2,0"/>
                                                </StackPanel>
                                            </Grid>
                                            
                                            <!-- 説明 -->
                                            <TextBlock Grid.Row="1" Text="{Binding Description}" 
                                                       FontSize="12" Foreground="Gray" TextWrapping="Wrap" Margin="0,8,0,0"
                                                       Visibility="{Binding Description, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            
                                            <!-- カテゴリとタグ -->
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                                                <Border Background="{StaticResource SecondaryBrush}" CornerRadius="3" Margin="0,0,4,0"
                                                        Visibility="{Binding Category, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBlock Text="{Binding Category}" FontSize="10" 
                                                               Foreground="White" Padding="4,2"/>
                                                </Border>
                                                <TextBlock Text="{Binding TagsText}" FontSize="10" 
                                                           Foreground="Gray" VerticalAlignment="Center"
                                                           Visibility="{Binding TagsText, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            </StackPanel>
                                            
                                            <!-- ポモドーロ情報と進捗 -->
                                            <Grid Grid.Row="3" Margin="0,8,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                    <TextBlock Text="{Binding CompletedPomodoros, StringFormat={}🍅 {0}}" 
                                                               FontSize="12" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding EstimatedPomodoros, StringFormat={}/ {0}}" 
                                                               FontSize="12" Foreground="Gray" VerticalAlignment="Center" Margin="2,0,0,0"/>
                                                </StackPanel>
                                                
                                                <ProgressBar Grid.Column="1" 
                                                             Value="{Binding ProgressPercentage, Mode=OneWay}" 
                                                             Maximum="100" Width="60" Height="6"/>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- 完了タスク列 -->
            <Border Grid.Column="2" Background="White" Margin="5,0,0,0" CornerRadius="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 列ヘッダー -->
                    <Border Grid.Row="0" Background="#F0FDF4" CornerRadius="12,12,0,0" Padding="20,15">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="12" Height="12" Fill="#10B981" VerticalAlignment="Center"/>
                                <TextBlock Text="完了" FontSize="16" FontWeight="Bold" Margin="8,0,0,0" 
                                           Foreground="{StaticResource TextLight}"/>
                            </StackPanel>
                            <TextBlock Text="{Binding DoneTasksCollection.Count, StringFormat={}タスク数: {0}}" 
                                       FontSize="12" Foreground="Gray" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- タスクリスト -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="10">
                        <ItemsControl ItemsSource="{Binding DoneTasksCollection}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource KanbanTaskCard}" Margin="0,0,0,10" BorderBrush="#10B981" Opacity="0.8">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- タスクヘッダー -->
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                    <TextBlock Text="✅" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                    <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="14"
                                                               VerticalAlignment="Center" TextWrapping="Wrap"
                                                               TextDecorations="Strikethrough"/>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                    <Button Content="↩" ToolTip="未完了に戻す"
                                                            Command="{Binding DataContext.ResetTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource KanbanActionButton}"
                                                            Background="Orange" Margin="2,0"/>
                                                    <Button Content="🗑" ToolTip="削除"
                                                            Command="{Binding DataContext.DeleteTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource KanbanActionButton}"
                                                            Background="{StaticResource ErrorBrush}" Margin="2,0"/>
                                                </StackPanel>
                                            </Grid>
                                            
                                            <!-- 完了日時 -->
                                            <TextBlock Grid.Row="1" 
                                                       Text="{Binding CompletedAt, StringFormat={}完了: {0:MM/dd HH:mm}}" 
                                                       FontSize="11" Foreground="Green" Margin="0,4,0,0"/>
                                            
                                            <!-- カテゴリとタグ -->
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,4,0,0">
                                                <Border Background="{StaticResource SecondaryBrush}" CornerRadius="3" Margin="0,0,4,0"
                                                        Visibility="{Binding Category, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBlock Text="{Binding Category}" FontSize="10" 
                                                               Foreground="White" Padding="4,2"/>
                                                </Border>
                                            </StackPanel>
                                            
                                            <!-- ポモドーロ情報 -->
                                            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock Text="{Binding CompletedPomodoros, StringFormat={}🍅 {0}}" 
                                                           FontSize="12" Foreground="Green"/>
                                                <TextBlock Text="{Binding EstimatedPomodoros, StringFormat={}/ {0} 完了}" 
                                                           FontSize="12" Foreground="Gray" Margin="4,0,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>