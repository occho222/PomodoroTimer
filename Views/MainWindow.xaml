<Window x:Class="PomodoroTimer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:PomodoroTimer.Models"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:behaviors="clr-namespace:PomodoroTimer.Behaviors"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:converters="clr-namespace:PomodoroTimer.Converters"
        Title="ポモドーロタイマー - カンバンボード" 
        Height="900" Width="1600"
        MinHeight="800" MinWidth="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        Visibility="Visible"
        Background="{StaticResource BackgroundLight}">

    <Window.Resources>
        <converters:MinutesToTimeFormatConverter x:Key="MinutesToTimeFormatConverter"/>
        
        <!-- TodoTasks用のCollectionViewSource -->
        <CollectionViewSource x:Key="TodoTasksGroupedSource" Source="{Binding TodoTasks}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Category"/>
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="250" MinWidth="200" MaxWidth="350"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- サイドバー折りたたみボタン -->
        <Button x:Name="SidebarToggleButton" Grid.Row="0" Grid.Column="1" 
                VerticalAlignment="Top" HorizontalAlignment="Left" 
                Width="24" Height="40" Margin="-12,15,0,0" 
                Style="{StaticResource RoundButton}" Background="#3B82F6" Foreground="White"
                Click="SidebarToggle_Click" ToolTip="サイドバーの表示/非表示" Panel.ZIndex="100">
            <TextBlock x:Name="SidebarToggleIcon" Text="◀" FontSize="12" FontWeight="Bold"/>
        </Button>
        
        <!-- サイドパネル（フィルター・検索のみ） -->
        <Border x:Name="SidebarPanel" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Background="White" Margin="10,10,0,10" CornerRadius="12" Padding="15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- サイドバータイトル -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="🔍 検索・フィルター" FontSize="16" FontWeight="Bold" 
                                   Foreground="#1F2937" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- クイックタスク追加エリア -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="🚀 クイック追加" FontSize="12" FontWeight="Bold" Foreground="#374151" Margin="0,0,0,6"/>
                        <Grid HorizontalAlignment="Stretch">
                            <TextBox x:Name="QuickTaskInput" 
                                     Text="{Binding QuickTaskText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource SearchTextBox}"
                                     ToolTip="タスク名を入力してEnterで即座に追加"
                                     FontWeight="SemiBold" Background="#F0F9FF" BorderBrush="#3B82F6"
                                     KeyDown="QuickTaskInput_KeyDown"
                                     TextChanged="QuickTaskInput_TextChanged"
                                     LostFocus="QuickTaskInput_LostFocus" Height="32"/>
                            <!-- オートコンプリート候補リスト -->
                            <Popup x:Name="AutoCompletePopup" 
                                   Placement="Bottom" 
                                   PlacementTarget="{Binding ElementName=QuickTaskInput}"
                                   StaysOpen="False"
                                   MaxHeight="150">
                                <Border Background="White" BorderBrush="#3B82F6" BorderThickness="1" CornerRadius="4">
                                    <ListBox x:Name="AutoCompleteList"
                                             ItemsSource="{Binding FilteredTaskHistory}"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             MaxHeight="140"
                                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                                             SelectionChanged="AutoCompleteList_SelectionChanged">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" Padding="8,4" FontSize="12"
                                                          Background="Transparent" Foreground="#1F2937"/>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                        <ListBox.ItemContainerStyle>
                                            <Style TargetType="ListBoxItem">
                                                <Setter Property="Padding" Value="0"/>
                                                <Setter Property="Margin" Value="0"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#EBF8FF"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ListBox.ItemContainerStyle>
                                    </ListBox>
                                </Border>
                            </Popup>
                        </Grid>
                        
                        <!-- タスク追加ボタン -->
                        <Button Command="{Binding AddTaskCommand}" Margin="0,8,0,0"
                                Style="{StaticResource RoundButton}" Background="#10B981" Foreground="White"
                                Height="32" Padding="8,6" ToolTip="新しいタスクを追加" HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="➕" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <TextBlock Text="タスク追加" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    
                    <!-- 検索・フィルターエリア（折りたたみ） -->
                    <Expander Header="🔍 検索・絞り込み" FontSize="12" FontWeight="Bold" 
                              Foreground="#374151" Margin="0,16,0,16" IsExpanded="False">
                        <StackPanel Margin="0,8,0,0">
                        
                        <!-- 検索ボックス -->
                        <StackPanel Margin="0,0,0,8">
                            <TextBlock Text="キーワード" FontSize="10" Foreground="#6B7280" Margin="0,0,0,2"/>
                            <TextBox Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource SearchTextBox}"
                                     ToolTip="タスク名や説明で検索"/>
                        </StackPanel>
                        
                        <!-- カテゴリフィルター -->
                        <StackPanel Margin="0,0,0,8">
                            <TextBlock Text="カテゴリ" FontSize="10" Foreground="#6B7280" Margin="0,0,0,2"/>
                            <ComboBox ItemsSource="{Binding AvailableCategories}"
                                      SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                                      Style="{StaticResource FilterComboBox}"
                                      ToolTip="カテゴリで絞り込み"/>
                        </StackPanel>
                        
                        <!-- タグフィルター -->
                        <StackPanel Margin="0,0,0,8">
                            <TextBlock Text="タグ" FontSize="10" Foreground="#6B7280" Margin="0,0,0,2"/>
                            <ComboBox ItemsSource="{Binding AvailableTags}"
                                      SelectedItem="{Binding SelectedTag, Mode=TwoWay}"
                                      Style="{StaticResource FilterComboBox}"
                                      ToolTip="タグで絞り込み"/>
                        </StackPanel>
                        
                        <!-- 期限フィルター -->
                        <StackPanel Margin="0,0,0,8">
                            <TextBlock Text="期限" FontSize="10" Foreground="#6B7280" Margin="0,0,0,2"/>
                            <ComboBox SelectedItem="{Binding SelectedDueDateFilter, Mode=TwoWay}"
                                      Style="{StaticResource FilterComboBox}"
                                      ToolTip="期限で絞り込み">
                                <ComboBoxItem Content="すべて" Tag="All"/>
                                <ComboBoxItem Content="期限なし" Tag="None"/>
                                <ComboBoxItem Content="今日まで" Tag="Today"/>
                                <ComboBoxItem Content="明日まで" Tag="Tomorrow"/>
                                <ComboBoxItem Content="1週間以内" Tag="ThisWeek"/>
                                <ComboBoxItem Content="期限切れ" Tag="Overdue"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- 優先度フィルター -->
                        <StackPanel Margin="0,0,0,8">
                            <TextBlock Text="優先度" FontSize="10" Foreground="#6B7280" Margin="0,0,0,2"/>
                            <ComboBox ItemsSource="{Binding AvailablePriorities}"
                                      SelectedItem="{Binding SelectedPriority, Mode=TwoWay}"
                                      Style="{StaticResource FilterComboBox}"
                                      ToolTip="優先度で絞り込み">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource PriorityToStringConverter}}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- クリアボタン -->
                        <Button Content="🗑️ クリア" Command="{Binding ClearFiltersCommand}"
                                Style="{StaticResource RoundButton}" Background="#EF4444" Foreground="White"
                                FontSize="11" Padding="8,6" ToolTip="全ての検索・フィルター条件をクリア"
                                HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </Expander>
                    
                    <!-- クイックテンプレート（折りたたみ） -->
                    <Expander Header="⚡ クイックテンプレート" FontSize="12" FontWeight="Bold" 
                              Foreground="#374151" Margin="0,0,0,16" IsExpanded="False">
                        <StackPanel Margin="0,8,0,0">
                            <!-- テンプレート一覧 -->
                            <ScrollViewer MaxHeight="100" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,0,0,8">
                                <ItemsControl ItemsSource="{Binding QuickTemplates}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.CreateTaskFromTemplateCommand}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource RoundButton}" 
                                                    Background="{Binding BackgroundBrush}" Foreground="White"
                                                    Height="28" Margin="2" Padding="6,4" ToolTip="{Binding Description}" FontSize="10">
                                                <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold"/>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                            
                            <!-- 管理ボタン -->
                            <Button Command="{Binding OpenQuickTemplateManagerCommand}"
                                    Style="{StaticResource RoundButton}" Background="#8B5CF6" Foreground="White"
                                    Height="28" Padding="6,4" ToolTip="クイックテンプレート管理" HorizontalAlignment="Stretch">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="⚙" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBlock Text="テンプレート管理" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Expander>
                    
                    <!-- 管理機能 -->
                    <StackPanel>
                        <TextBlock Text="⚙️ 管理・操作" FontSize="12" FontWeight="Bold" Foreground="#374151" Margin="0,0,0,8"/>
                        
                        <!-- タスク操作 -->
                        <TextBlock Text="タスク操作" FontSize="10" Foreground="#6B7280" Margin="0,0,0,4"/>
                        <Button Command="{Binding CreateTaskFromTaskTemplateCommand}" Margin="0,0,0,4"
                                Style="{StaticResource RoundButton}" Background="#6366F1" Foreground="White"
                                Height="32" Padding="8,6" ToolTip="テンプレート選択" HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="📋" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <TextBlock Text="通常テンプレート" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding OpenStatisticsCommand}" Margin="0,0,0,8"
                                Style="{StaticResource RoundButton}" Background="#3B82F6" Foreground="White"
                                Height="32" Padding="8,6" ToolTip="統計とレポート" HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="📈" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <TextBlock Text="統計" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- カンバン操作 -->
                        <TextBlock Text="カンバン操作" FontSize="10" Foreground="#6B7280" Margin="0,0,0,4"/>
                        <Button Command="{Binding OpenBulkOperationCommand}" Margin="0,0,0,8"
                                Style="{StaticResource RoundButton}" Background="#3B82F6" Foreground="White"
                                Height="32" Padding="8,6" ToolTip="一括操作" HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="📋" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <TextBlock Text="一括操作" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- テンプレート管理 -->
                        <TextBlock Text="テンプレート管理" FontSize="10" Foreground="#6B7280" Margin="0,0,0,4"/>
                        <Button Command="{Binding OpenTemplateManagerCommand}" Margin="0,0,0,4"
                                Style="{StaticResource RoundButton}" Background="#EC4899" Foreground="White"
                                Height="32" Padding="8,6" ToolTip="通常テンプレートの管理" HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="📋" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <TextBlock Text="通常テンプレート管理" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        
                        <!-- データ管理 -->
                        <TextBlock Text="データ管理" FontSize="10" Foreground="#6B7280" Margin="0,0,0,4"/>
                        <Button Command="{Binding ImportFromMicrosoftGraphCommand}" Margin="0,0,0,4"
                                Style="{StaticResource RoundButton}" Background="#F59E0B" Foreground="White"
                                Height="32" Padding="8,6" ToolTip="Microsoft Graphからタスクをインポート" HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="📊" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <TextBlock Text="インポート" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding OpenProjectTagManagerCommand}" Margin="0,0,0,8"
                                Style="{StaticResource RoundButton}" Background="#EC4899" Foreground="White"
                                Height="32" Padding="8,6" ToolTip="プロジェクトとタグの管理" HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="🏷️" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <TextBlock Text="プロジェクト・タグ" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- システム設定 -->
                        <TextBlock Text="システム設定" FontSize="10" Foreground="#6B7280" Margin="0,0,0,4"/>
                        <Button Command="{Binding OpenSettingsCommand}"
                                Style="{StaticResource RoundButton}" Background="#6B7280" Foreground="White"
                                Height="32" Padding="8,6" ToolTip="アプリの設定" HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="⚙️" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <TextBlock Text="設定" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <!-- リサイザー -->
        <GridSplitter Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" 
                      Width="6" Background="#E5E7EB" 
                      HorizontalAlignment="Center" VerticalAlignment="Stretch"
                      ResizeBehavior="PreviousAndNext" ResizeDirection="Columns"/>

        <!-- メインエリア（タイマーとカンバンボード） -->
        <Grid Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" Margin="5,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="TimerColumn" Width="320" MinWidth="280" MaxWidth="400"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- タイマーとタスク詳細エリア -->
            <Grid Grid.Row="0" Grid.Column="0" Grid.RowSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- タイマーエリア -->
                <Border Grid.Row="0" Background="White" Margin="0,0,5,5" CornerRadius="12" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- タイマー表示部分 -->
                    <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,15">
                        <TextBlock Text="{Binding TimeRemaining}" FontSize="32" FontWeight="Bold" 
                                   Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding SessionTypeText}" FontSize="13" Foreground="Gray" 
                                   HorizontalAlignment="Center" Margin="0,4,0,0"/>
                        <ProgressBar Value="{Binding ProgressValue, Mode=OneWay}" Maximum="100" 
                                     Height="6" Width="180" Margin="0,8,0,0"/>
                    </StackPanel>
                    
                    <!-- メイン操作ボタン -->
                    <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,12">
                        <Button Content="{Binding StartPauseButtonText}" Command="{Binding StartPauseCommand}"
                                Style="{StaticResource RoundButton}" Height="36" FontSize="13" Width="120" Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="停止" Command="{Binding StopCommand}"
                                    Style="{StaticResource RoundButton}" Background="Gray" Height="28" FontSize="11" 
                                    Width="55" Margin="0,0,5,0"/>
                            <Button Content="スキップ" Command="{Binding SkipCommand}"
                                    Style="{StaticResource RoundButton}" Background="{StaticResource SecondaryBrush}" 
                                    Height="28" FontSize="11" Width="55" Margin="5,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- 微調整ボタンと集中モード -->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 時間調整ボタン -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,6">
                            <Button Content="+1分" Command="{Binding AddOneMinuteCommand}"
                                    Style="{StaticResource RoundButton}" Background="#10B981" Foreground="White"
                                    Height="24" FontSize="10" Width="45" Margin="0,0,3,0" 
                                    ToolTip="タイマーに1分追加"/>
                            <Button Content="+10秒" Command="{Binding AddTenSecondsCommand}"
                                    Style="{StaticResource RoundButton}" Background="#059669" Foreground="White"
                                    Height="24" FontSize="10" Width="45" Margin="3,0,6,0"
                                    ToolTip="タイマーに10秒追加"/>
                            <Button Content="-1分" Command="{Binding SubtractOneMinuteCommand}"
                                    Style="{StaticResource RoundButton}" Background="#EF4444" Foreground="White"
                                    Height="24" FontSize="10" Width="45" Margin="6,0,3,0" 
                                    ToolTip="タイマーから1分減らす"/>
                            <Button Content="-10秒" Command="{Binding SubtractTenSecondsCommand}"
                                    Style="{StaticResource RoundButton}" Background="#DC2626" Foreground="White"
                                    Height="24" FontSize="10" Width="45" Margin="3,0,0,0"
                                    ToolTip="タイマーから10秒減らす"/>
                        </StackPanel>
                        
                        <!-- 集中モードトグルボタン -->
                        <ToggleButton Grid.Row="1" x:Name="FocusModeToggle" 
                                      IsChecked="{Binding EnableFocusMode, Mode=TwoWay}" 
                                      Click="FocusModeToggle_Click"
                                      Height="28" Width="110" Margin="0,6,0,0"
                                      ToolTip="集中モードのON/OFF切り替え"
                                      BorderThickness="0" Cursor="Hand"
                                      HorizontalAlignment="Center">
                            <ToggleButton.Style>
                                <Style TargetType="ToggleButton">
                                    <Setter Property="Background" Value="#E5E7EB"/>
                                    <Setter Property="Foreground" Value="#374151"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="6"
                                                        Padding="8,4"
                                                        BorderThickness="0">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter Property="Background" Value="#6366F1"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#D1D5DB"/>
                                                    </Trigger>
                                                    <MultiTrigger>
                                                        <MultiTrigger.Conditions>
                                                            <Condition Property="IsChecked" Value="True"/>
                                                            <Condition Property="IsMouseOver" Value="True"/>
                                                        </MultiTrigger.Conditions>
                                                        <Setter Property="Background" Value="#5B5FC7"/>
                                                    </MultiTrigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ToggleButton.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔒" FontSize="11" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <TextBlock Text="集中モード" FontSize="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ToggleButton>
                    </Grid>
                </Grid>
            </Border>
                
                <!-- タスク詳細表示エリア -->
                <Border Grid.Row="1" Background="White" Margin="0,5,5,0" CornerRadius="12" Padding="15"
                        Visibility="{Binding SelectedTaskDetail, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- ヘッダー -->
                            <Grid Grid.Row="0" Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="📋 タスク詳細" FontSize="16" FontWeight="Bold" 
                                               Foreground="#1F2937" Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding SelectedTaskDetail.Title}" FontSize="18" FontWeight="Bold" 
                                               Foreground="#3B82F6" TextWrapping="Wrap" LineHeight="22"/>
                                </StackPanel>
                                
                                <Button Grid.Column="1" Content="✕" ToolTip="詳細を閉じる" 
                                        Style="{StaticResource RoundButton}" Background="#9CA3AF" Foreground="White"
                                        Width="28" Height="28" FontSize="12" FontWeight="Bold"
                                        Click="CloseTaskDetail_Click"/>
                            </Grid>
                            
                            <!-- ステータス・優先度 -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,12">
                                <Border Background="{StaticResource PrimaryBrush}" CornerRadius="4" Padding="8,4" Margin="0,0,8,0">
                                    <TextBlock Text="{Binding SelectedTaskDetail.Status}" 
                                               FontSize="11" FontWeight="SemiBold" Foreground="White"/>
                                </Border>
                                <Ellipse Width="16" Height="16" 
                                         Fill="{Binding SelectedTaskDetail.Priority, Converter={StaticResource PriorityToColorConverter}}"
                                         Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding SelectedTaskDetail.Priority, Converter={StaticResource PriorityToStringConverter}}" 
                                           FontSize="12" FontWeight="SemiBold" Foreground="#374151" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- 時間情報 -->
                            <Grid Grid.Row="2" Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <TextBlock Text="⏱️" FontSize="14" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBlock Text="実績時間:" FontSize="12" Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBlock Text="{Binding SelectedTaskDetail.ActualMinutes, Converter={StaticResource MinutesToTimeFormatConverter}}" 
                                               FontSize="12" FontWeight="Bold" Foreground="#4A90E2" VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <TextBlock Text="📊" FontSize="14" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBlock Text="見積時間:" FontSize="12" Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBlock Text="{Binding SelectedTaskDetail.EstimatedMinutes, Converter={StaticResource MinutesToTimeFormatConverter}}" 
                                               FontSize="12" FontWeight="Bold" Foreground="#6B7280" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- 期限 -->
                            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,12"
                                        Visibility="{Binding SelectedTaskDetail.DueDate, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="⏰" FontSize="14" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <TextBlock Text="期限:" FontSize="12" Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <TextBlock Text="{Binding SelectedTaskDetail.DueDate, StringFormat='{}{0:yyyy/MM/dd HH:mm}'}" 
                                           FontSize="12" FontWeight="Bold" 
                                           Foreground="{Binding SelectedTaskDetail.DueDateColor}" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- カテゴリ・タグ -->
                            <StackPanel Grid.Row="4" Margin="0,0,0,12">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,6"
                                            Visibility="{Binding SelectedTaskDetail.Category, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="🏷️" FontSize="14" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBlock Text="カテゴリ:" FontSize="12" Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <Border Background="{StaticResource SecondaryBrush}" CornerRadius="4" Padding="8,4">
                                        <TextBlock Text="{Binding SelectedTaskDetail.Category}" FontSize="11" 
                                                   FontWeight="SemiBold" Foreground="White"/>
                                    </Border>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal"
                                            Visibility="{Binding SelectedTaskDetail.TagsText, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="🏷️" FontSize="14" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBlock Text="タグ:" FontSize="12" Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <TextBlock Text="{Binding SelectedTaskDetail.TagsText}" FontSize="12" 
                                               Foreground="#374151" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- チェックリスト -->
                            <StackPanel Grid.Row="5" Margin="0,0,0,12"
                                        Visibility="{Binding SelectedTaskDetail.Checklist.Count, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="✅ チェックリスト" FontSize="14" FontWeight="Bold" 
                                               Foreground="#374151" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding SelectedTaskDetail.ChecklistProgress, StringFormat='({0})'}" 
                                               FontSize="12" Foreground="#6B7280" VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <ItemsControl ItemsSource="{Binding SelectedTaskDetail.Checklist}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#F9FAFB" CornerRadius="4" Margin="0,2" Padding="8,6"
                                                    BorderThickness="1" BorderBrush="#E5E7EB">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding IsChecked, Converter={StaticResource BooleanToCheckConverter}}" 
                                                               FontSize="12" Margin="0,0,8,0" VerticalAlignment="Top"/>
                                                    <TextBlock Text="{Binding Text}" FontSize="12" TextWrapping="Wrap" 
                                                               VerticalAlignment="Top" Foreground="#374151">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsChecked}" Value="True">
                                                                        <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                                        <Setter Property="Foreground" Value="#9CA3AF"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                            
                            <!-- 説明 -->
                            <StackPanel Grid.Row="6" Margin="0,0,0,12"
                                        Visibility="{Binding SelectedTaskDetail.Description, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="📝 説明" FontSize="14" FontWeight="Bold" 
                                           Foreground="#374151" Margin="0,0,0,6"/>
                                <Border Background="#F9FAFB" CornerRadius="6" Padding="12">
                                    <TextBlock Text="{Binding SelectedTaskDetail.Description}" 
                                               FontSize="12" Foreground="#374151" TextWrapping="Wrap" LineHeight="18"/>
                                </Border>
                            </StackPanel>
                            
                            <!-- 画像・リンク -->
                            <StackPanel Grid.Row="7">
                                <!-- 画像 -->
                                <StackPanel Margin="0,0,0,12"
                                            Visibility="{Binding SelectedTaskDetail.HasImages, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="🖼️ 画像" FontSize="14" FontWeight="Bold" 
                                               Foreground="#374151" Margin="0,0,0,8"/>
                                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                                        <ItemsControl ItemsSource="{Binding SelectedTaskDetail.ImageAttachments}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border CornerRadius="6" Margin="0,0,8,0" Background="White" 
                                                            BorderThickness="1" BorderBrush="#E5E7EB">
                                                        <Image Source="{Binding}" Width="100" Height="100" 
                                                               Stretch="UniformToFill" ToolTip="{Binding}"
                                                               Cursor="Hand">
                                                            <Image.InputBindings>
                                                                <MouseBinding MouseAction="LeftClick" 
                                                                            Command="{Binding DataContext.OpenImageCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                            CommandParameter="{Binding}"/>
                                                            </Image.InputBindings>
                                                        </Image>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </StackPanel>
                                
                                <!-- リンク -->
                                <StackPanel Visibility="{Binding SelectedTaskDetail.Links.Count, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="🔗 リンク" FontSize="14" FontWeight="Bold" 
                                               Foreground="#374151" Margin="0,0,0,8"/>
                                    <ItemsControl ItemsSource="{Binding SelectedTaskDetail.Links}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#F3E8FF" CornerRadius="6" Margin="0,0,0,4" Padding="10,6">
                                                    <StackPanel>
                                                        <Button Content="{Binding Title}" FontSize="12" FontWeight="SemiBold"
                                                                Command="{Binding DataContext.OpenLinkItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                CommandParameter="{Binding}"
                                                                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                                                Foreground="#7C3AED" Background="Transparent" BorderThickness="0" 
                                                                Cursor="Hand" HorizontalAlignment="Left"/>
                                                        <TextBlock Text="{Binding Url}" FontSize="10" Foreground="#9CA3AF" 
                                                                   TextWrapping="Wrap" Margin="0,2,0,0"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </Border>
            </Grid>
            
            <!-- タイマーエリアリサイザー -->
            <GridSplitter Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" 
                          Width="6" Background="#E5E7EB" 
                          HorizontalAlignment="Center" VerticalAlignment="Stretch"
                          ResizeBehavior="PreviousAndNext" ResizeDirection="Columns"
                          Margin="0,0,0,5"/>
            
            <!-- カンバンボードエリア -->
            <ScrollViewer Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" 
                         HorizontalScrollBarVisibility="Auto" 
                         VerticalScrollBarVisibility="Disabled"
                         Margin="5,0,0,0">
                <Grid MinWidth="1200">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>

            <!-- 未開始タスク列 -->
            <Border Grid.Column="0" Background="White" Margin="0,0,3,0" CornerRadius="12">
                <i:Interaction.Behaviors>
                    <behaviors:KanbanDragDropBehavior TargetStatus="Todo"/>
                </i:Interaction.Behaviors>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 列ヘッダー -->
                    <Border Grid.Row="0" Background="#F8FAFC" CornerRadius="12,12,0,0" Padding="20,15">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="12" Height="12" Fill="#94A3B8" VerticalAlignment="Center"/>
                                <TextBlock Text="未開始" FontSize="16" FontWeight="Bold" Margin="8,0,0,0" 
                                           Foreground="{StaticResource TextLight}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Text="{Binding TodoTasks.Count, StringFormat={}タスク数: {0}}" 
                                           FontSize="12" Foreground="Gray"/>
                                <TextBlock Text="{Binding TodoTasksEstimatedMinutes, Converter={StaticResource MinutesToTimeFormatConverter}, StringFormat={}（見積: {0}）}" 
                                           FontSize="12" Foreground="#6B7280" Margin="8,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- タスクリスト -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="10">
                        <ItemsControl ItemsSource="{Binding Source={StaticResource TodoTasksGroupedSource}}">
                            <ItemsControl.GroupStyle>
                                <GroupStyle>
                                    <GroupStyle.HeaderTemplate>
                                        <DataTemplate>
                                            <Border Background="#F1F5F9" CornerRadius="6" Margin="0,4,0,2" Padding="8,4">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <Button Grid.Column="0" x:Name="ExpandCollapseButton"
                                                            Content="▼" FontSize="10" FontWeight="Bold"
                                                            Background="Transparent" BorderThickness="0"
                                                            Width="16" Height="16" Padding="0" Margin="0,0,4,0"
                                                            Click="GroupExpandCollapse_Click"
                                                            Tag="{Binding Name}"/>
                                                    
                                                    <TextBlock Grid.Column="1" 
                                                               Text="{Binding Name}" 
                                                               FontSize="11" FontWeight="SemiBold" 
                                                               Foreground="#475569" VerticalAlignment="Center"/>
                                                    
                                                    <TextBlock Grid.Column="2" 
                                                               Text="{Binding ItemCount, StringFormat={}({0})}" 
                                                               FontSize="10" Foreground="#64748B" 
                                                               VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </GroupStyle.HeaderTemplate>
                                    <GroupStyle.Panel>
                                        <ItemsPanelTemplate>
                                            <StackPanel/>
                                        </ItemsPanelTemplate>
                                    </GroupStyle.Panel>
                                </GroupStyle>
                            </ItemsControl.GroupStyle>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <!-- コンパクトなタスクカード（タイトルと期限のみ） -->
                                    <Border Style="{StaticResource KanbanTaskCard}" Margin="16,0,0,4" Padding="8"
                                            MouseLeftButtonDown="TaskCard_MouseLeftButtonDown"
                                            Tag="{Binding}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- 優先度インジケーター -->
                                            <Ellipse Grid.Column="0" Style="{StaticResource PriorityIndicator}"
                                                     Fill="{Binding Priority, Converter={StaticResource PriorityToColorConverter}}"
                                                     Width="6" Height="6" Margin="0,0,6,0"/>
                                            
                                            <!-- タスク情報 -->
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="12"
                                                           TextWrapping="Wrap" LineHeight="16" Margin="0,0,4,0"/>
                                                <!-- 期限表示 -->
                                                <TextBlock Text="{Binding DueDateText}" FontSize="10" FontWeight="SemiBold"
                                                           Foreground="{Binding DueDateColor}" Margin="0,2,0,0"
                                                           Visibility="{Binding DueDateText, Converter={StaticResource StringToVisibilityConverter}}"/>
                                            </StackPanel>
                                            
                                            <!-- 3点メニューボタン -->
                                            <Button Grid.Column="2" Content="⋯" ToolTip="その他の操作" FontSize="12" FontWeight="Bold"
                                                    Style="{StaticResource KanbanActionButton}"
                                                    Background="#E5E7EB" Foreground="#374151" 
                                                    Width="18" Height="18" VerticalAlignment="Top"
                                                    Click="MenuButton_Click" Tag="{Binding}">
                                                <Button.ContextMenu>
                                                    <ContextMenu>
                                                        <MenuItem Header="▶ 開始"
                                                                  Click="MenuItem_Click" Tag="StartTask"/>
                                                        <Separator/>
                                                        <MenuItem Header="📝 詳細を開く"
                                                                  Click="MenuItem_Click" Tag="OpenTaskDetail"/>
                                                        <MenuItem Header="📋 テンプレート作成"
                                                                  Click="MenuItem_Click" Tag="CreateTemplateFromTask"/>
                                                        <Separator/>
                                                        <MenuItem Header="🗑 削除"
                                                                  Click="MenuItem_Click" Tag="DeleteTask"/>
                                                    </ContextMenu>
                                                </Button.ContextMenu>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- 待機中タスク列 -->
            <Border Grid.Column="1" Background="White" Margin="3,0" CornerRadius="12">
                <i:Interaction.Behaviors>
                    <behaviors:KanbanDragDropBehavior TargetStatus="Waiting"/>
                </i:Interaction.Behaviors>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 列ヘッダー -->
                    <Border Grid.Row="0" Background="#EBF8FF" CornerRadius="12,12,0,0" Padding="20,15">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="12" Height="12" Fill="#3B82F6" VerticalAlignment="Center"/>
                                <TextBlock Text="待機中" FontSize="16" FontWeight="Bold" Margin="8,0,0,0" 
                                           Foreground="{StaticResource TextLight}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Text="{Binding WaitingTasks.Count, StringFormat={}タスク数: {0}}" 
                                           FontSize="12" Foreground="Gray"/>
                                <TextBlock Text="{Binding WaitingTasksEstimatedMinutes, Converter={StaticResource MinutesToTimeFormatConverter}, StringFormat={}（見積: {0}）}" 
                                           FontSize="12" Foreground="#6B7280" Margin="8,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- タスクリスト -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="10">
                        <ItemsControl ItemsSource="{Binding WaitingTasks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource KanbanTaskCard}" Margin="0,0,0,8" BorderBrush="#3B82F6"
                                            MouseLeftButtonDown="TaskCard_MouseLeftButtonDown"
                                            Tag="{Binding}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- タスクヘッダー -->
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                        <Ellipse Style="{StaticResource PriorityIndicator}"
                                                                 Fill="{Binding Priority, Converter={StaticResource PriorityToColorConverter}}"/>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="14"
                                                               TextWrapping="Wrap" LineHeight="18" Margin="0,0,8,0"/>
                                                    <!-- 期限表示 -->
                                                    <TextBlock Text="{Binding DueDateText}" FontSize="11" FontWeight="SemiBold"
                                                               Foreground="{Binding DueDateColor}" Margin="0,2,0,0"
                                                               Visibility="{Binding DueDateText, Converter={StaticResource StringToVisibilityConverter}}"/>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Right">
                                                    <!-- 3点メニューボタン -->
                                                    <Button Content="⋯" ToolTip="その他の操作" FontSize="16" FontWeight="Bold"
                                                            Style="{StaticResource KanbanActionButton}"
                                                            Background="#E5E7EB" Foreground="#374151" Margin="1"
                                                            Click="MenuButton_Click" Tag="{Binding}">
                                                        <Button.ContextMenu>
                                                            <ContextMenu>
                                                                <MenuItem Header="▶ 25分セッション開始"
                                                                          Click="MenuItem_Click" Tag="ExecuteTask"/>
                                                                <MenuItem Header="✓ 完了"
                                                                          Click="MenuItem_Click" Tag="CompleteTask"/>
                                                                <Separator/>
                                                                <MenuItem Header="⏸ 一時停止（未開始に戻す）"
                                                                          Click="MenuItem_Click" Tag="MoveTaskToTodo"/>
                                                                <MenuItem Header="📝 詳細を開く"
                                                                          Click="MenuItem_Click" Tag="OpenTaskDetail"/>
                                                                <MenuItem Header="📋 テンプレート作成"
                                                                          Click="MenuItem_Click" Tag="CreateTemplateFromTask"/>
                                                                <Separator/>
                                                                <MenuItem Header="🗑 削除"
                                                                          Click="MenuItem_Click" Tag="DeleteTask"/>
                                                            </ContextMenu>
                                                        </Button.ContextMenu>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                            
                                            <!-- 説明 -->
                                            <TextBlock Grid.Row="1" Text="{Binding Description}" 
                                                       FontSize="12" Foreground="Gray" TextWrapping="Wrap" Margin="0,8,0,0"
                                                       Visibility="{Binding Description, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            
                                            <!-- 画像表示 -->
                                            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" 
                                                         Margin="0,4,0,0" MaxHeight="80"
                                                         Visibility="{Binding HasImages, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <ItemsControl ItemsSource="{Binding ImageAttachments}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border CornerRadius="4" Margin="0,0,4,0" Background="White" BorderThickness="1" BorderBrush="#E5E7EB">
                                                                <Image Source="{Binding}" Width="60" Height="60" 
                                                                       Stretch="UniformToFill" ToolTip="{Binding}"
                                                                       Cursor="Hand">
                                                                    <Image.InputBindings>
                                                                        <MouseBinding MouseAction="LeftClick" 
                                                                                    Command="{Binding DataContext.OpenImageCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                                    CommandParameter="{Binding}"/>
                                                                    </Image.InputBindings>
                                                                </Image>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </ScrollViewer>
                                            
                                            <!-- カテゴリとタグ -->
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                                                <Border Background="{StaticResource SecondaryBrush}" CornerRadius="3" Margin="0,0,4,0"
                                                        Visibility="{Binding Category, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBlock Text="{Binding Category}" FontSize="10" 
                                                               Foreground="White" Padding="4,2"/>
                                                </Border>
                                                <TextBlock Text="{Binding TagsText, Mode=OneWay}" FontSize="10" 
                                                           Foreground="Gray" VerticalAlignment="Center"
                                                           Visibility="{Binding TagsText, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}"/>
                                            </StackPanel>
                                            
                                            <!-- リンク -->
                                            <ItemsControl Grid.Row="3" ItemsSource="{Binding Links}" Margin="0,6,0,0"
                                                         Visibility="{Binding Links.Count, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="#F3E8FF" CornerRadius="3" Margin="0,0,3,0" Padding="6,2">
                                                            <Button Content="{Binding Title}" FontSize="9" 
                                                                    Command="{Binding DataContext.OpenLinkItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    CommandParameter="{Binding}"
                                                                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                                                    Foreground="#7C3AED" Background="Transparent" BorderThickness="0" 
                                                                    Cursor="Hand" ToolTip="{Binding Url}"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                            
                                            <!-- 実行時間と進捗 -->
                                            <Grid Grid.Row="4" Margin="0,8,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                    <TextBlock Text="{Binding ActualMinutes, Converter={StaticResource MinutesToTimeFormatConverter}, StringFormat={}⏱ {0}}" 
                                                               FontSize="11" Foreground="#4A90E2" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding EstimatedMinutes, Converter={StaticResource MinutesToTimeFormatConverter}, StringFormat={}/ {0}}" 
                                                               FontSize="11" Foreground="Gray" VerticalAlignment="Center" Margin="2,0,0,0"/>
                                                </StackPanel>
                                                
                                                <ProgressBar Grid.Column="1" 
                                                             Value="{Binding ProgressPercentage, Mode=OneWay}" 
                                                             Maximum="100" Width="60" Height="6"/>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- 実行中タスク列 -->
            <Border Grid.Column="2" Background="White" Margin="3,0" CornerRadius="12">
                <i:Interaction.Behaviors>
                    <behaviors:KanbanDragDropBehavior TargetStatus="Executing"/>
                </i:Interaction.Behaviors>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 列ヘッダー -->
                    <Border Grid.Row="0" Background="#FEF3C7" CornerRadius="12,12,0,0" Padding="20,15">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="12" Height="12" Fill="#F59E0B" VerticalAlignment="Center"/>
                                <TextBlock Text="実行中" FontSize="16" FontWeight="Bold" Margin="8,0,0,0" 
                                           Foreground="{StaticResource TextLight}"/>
                            </StackPanel>
                            <TextBlock Text="{Binding CurrentTask.Title, FallbackValue=待機中}" 
                                       FontSize="12" Foreground="Gray" Margin="0,4,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- 実行中タスク詳細カード -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="10">
                        <StackPanel>
                            <Border Style="{StaticResource KanbanTaskCard}" Margin="0,0,0,8" BorderBrush="#F59E0B" 
                                    Background="#FFFBF0" Padding="15"
                                    Visibility="{Binding CurrentTask, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    MouseLeftButtonDown="TaskCard_MouseLeftButtonDown"
                                    Tag="{Binding CurrentTask}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- タスクヘッダー -->
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0">
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                <Ellipse Style="{StaticResource PriorityIndicator}"
                                                         Fill="{Binding CurrentTask.Priority, Converter={StaticResource PriorityToColorConverter}}"/>
                                                <TextBlock Text="⏱️" FontSize="16" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                                <TextBlock Text="実行中" FontSize="12" FontWeight="SemiBold" 
                                                           VerticalAlignment="Center" Foreground="#6B7280"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding CurrentTask.Title}" FontWeight="Bold" FontSize="16"
                                                       TextWrapping="Wrap" LineHeight="20" Foreground="#1F2937" Margin="22,0,0,0"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                            <!-- 3点メニューボタン -->
                                            <Button Content="⋯" ToolTip="その他の操作" FontSize="16" FontWeight="Bold"
                                                    Style="{StaticResource KanbanActionButton}"
                                                    Background="#E5E7EB" Foreground="#374151" Margin="2,0" Width="32" Height="28"
                                                    Click="MenuButton_Click" Tag="{Binding CurrentTask}">
                                                <Button.ContextMenu>
                                                    <ContextMenu>
                                                        <MenuItem Header="⏹ セッション停止"
                                                                  Click="MenuItem_Click" Tag="StopTaskExecution"/>
                                                        <MenuItem Header="✓ 完了"
                                                                  Click="MenuItem_Click" Tag="CompleteTask"/>
                                                        <Separator/>
                                                        <MenuItem Header="📝 詳細を開く"
                                                                  Click="MenuItem_Click" Tag="OpenTaskDetail"/>
                                                    </ContextMenu>
                                                </Button.ContextMenu>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                    
                                    <!-- セッション情報 -->
                                    <Border Grid.Row="1" Background="#F59E0B" CornerRadius="8" Margin="0,12,0,0" Padding="15,12">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="🍅" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding SessionTypeText}" FontSize="14" FontWeight="SemiBold" 
                                                       Foreground="White" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding TimeRemaining}" FontSize="22" FontWeight="Bold" 
                                                       Foreground="White" VerticalAlignment="Center" Margin="12,0,0,0"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- チェックリスト -->
                                    <StackPanel Grid.Row="2" Margin="0,12,0,0"
                                                Visibility="{Binding CurrentTask.Checklist.Count, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <TextBlock Text="📋 やることリスト" FontSize="14" FontWeight="Bold" Foreground="#1F2937"/>
                                            <TextBlock Text="{Binding CurrentTask.ChecklistProgress, StringFormat={}({0})}" 
                                                       FontSize="12" Foreground="#6B7280" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                                            <ItemsControl ItemsSource="{Binding CurrentTask.Checklist}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="#F9FAFB" CornerRadius="6" Margin="0,3" Padding="12,8"
                                                                BorderThickness="1" BorderBrush="#E5E7EB">
                                                            <StackPanel Orientation="Horizontal">
                                                                <CheckBox IsChecked="{Binding IsChecked, Mode=OneWay}" 
                                                                         VerticalAlignment="Top" Margin="0,2,12,0"
                                                                         Command="{Binding DataContext.ToggleChecklistItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                         CommandParameter="{Binding}">
                                                                    <CheckBox.Style>
                                                                        <Style TargetType="CheckBox">
                                                                            <Setter Property="Template">
                                                                                <Setter.Value>
                                                                                    <ControlTemplate TargetType="CheckBox">
                                                                                        <Border Width="18" Height="18" CornerRadius="3"
                                                                                                Background="{TemplateBinding Background}"
                                                                                                BorderBrush="#3B82F6" BorderThickness="2">
                                                                                            <Path x:Name="CheckMark" 
                                                                                                  Data="M 3 8 L 7 12 L 15 4" 
                                                                                                  Stroke="White" StrokeThickness="2.5" 
                                                                                                  Visibility="Collapsed"
                                                                                                  StrokeStartLineCap="Round"
                                                                                                  StrokeEndLineCap="Round"/>
                                                                                        </Border>
                                                                                        <ControlTemplate.Triggers>
                                                                                            <Trigger Property="IsChecked" Value="True">
                                                                                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                                                                                <Setter Property="Background" Value="#3B82F6"/>
                                                                                            </Trigger>
                                                                                            <Trigger Property="IsChecked" Value="False">
                                                                                                <Setter Property="Background" Value="White"/>
                                                                                            </Trigger>
                                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                                <Setter Property="Background" Value="#EBF8FF"/>
                                                                                            </Trigger>
                                                                                        </ControlTemplate.Triggers>
                                                                                    </ControlTemplate>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                        </Style>
                                                                    </CheckBox.Style>
                                                                </CheckBox>
                                                                <TextBlock Text="{Binding Text}" FontSize="13" TextWrapping="Wrap" 
                                                                           VerticalAlignment="Top" Foreground="#374151" LineHeight="18">
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="TextBlock">
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding IsChecked}" Value="True">
                                                                                    <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                                                    <Setter Property="Foreground" Value="#9CA3AF"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </TextBlock.Style>
                                                                </TextBlock>
                                                            </StackPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                        
                                        <!-- チェックリスト進捗バー -->
                                        <StackPanel Margin="0,8,0,0">
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                <TextBlock Text="進捗:" FontSize="11" Foreground="#6B7280"/>
                                                <TextBlock Text="{Binding CurrentTask.CheckedItemsCount}" FontSize="11" FontWeight="Bold" 
                                                           Foreground="#3B82F6" Margin="4,0,0,0"/>
                                                <TextBlock Text="/" FontSize="11" Foreground="#6B7280"/>
                                                <TextBlock Text="{Binding CurrentTask.Checklist.Count}" FontSize="11" Foreground="#6B7280"/>
                                                <TextBlock Text="{Binding CurrentTask.ChecklistCompletionPercentage, StringFormat={}({0:F0}%)}" 
                                                           FontSize="11" Foreground="#6B7280" Margin="4,0,0,0"/>
                                            </StackPanel>
                                            <ProgressBar Value="{Binding CurrentTask.ChecklistCompletionPercentage, Mode=OneWay}" 
                                                         Maximum="100" Height="6" Background="#E5E7EB" 
                                                         Foreground="#10B981" BorderThickness="0"/>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <!-- 説明 -->
                                    <TextBlock Grid.Row="3" Text="{Binding CurrentTask.Description}" 
                                               FontSize="12" Foreground="Gray" TextWrapping="Wrap" Margin="0,12,0,0"
                                               Visibility="{Binding CurrentTask.Description, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    
                                    <!-- 画像表示 -->
                                    <ScrollViewer Grid.Row="3" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" 
                                                 Margin="0,6,0,0" MaxHeight="100"
                                                 Visibility="{Binding CurrentTask.HasImages, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <ItemsControl ItemsSource="{Binding CurrentTask.ImageAttachments}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border CornerRadius="6" Margin="0,0,6,0" Background="White" BorderThickness="1" BorderBrush="#E5E7EB">
                                                        <Image Source="{Binding}" Width="80" Height="80" 
                                                               Stretch="UniformToFill" ToolTip="{Binding}"
                                                               Cursor="Hand">
                                                            <Image.InputBindings>
                                                                <MouseBinding MouseAction="LeftClick" 
                                                                            Command="{Binding DataContext.OpenImageCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                            CommandParameter="{Binding}"/>
                                                            </Image.InputBindings>
                                                        </Image>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                    
                                    <!-- カテゴリとタグ -->
                                    <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,12,0,0">
                                        <Border Background="{StaticResource SecondaryBrush}" CornerRadius="4" Margin="0,0,8,0" Padding="8,4"
                                                Visibility="{Binding CurrentTask.Category, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <TextBlock Text="{Binding CurrentTask.Category}" FontSize="11" 
                                                       Foreground="White" FontWeight="SemiBold"/>
                                        </Border>
                                        <TextBlock Text="{Binding CurrentTask.TagsText, Mode=OneWay}" FontSize="11" 
                                                   Foreground="#6B7280" VerticalAlignment="Center"
                                                   Visibility="{Binding CurrentTask.TagsText, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}"/>
                                    </StackPanel>
                                    
                                    <!-- リンク -->
                                    <ItemsControl Grid.Row="5" ItemsSource="{Binding CurrentTask.Links}" Margin="0,12,0,0"
                                                 Visibility="{Binding CurrentTask.Links.Count, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#F3E8FF" CornerRadius="4" Margin="0,0,6,6" Padding="8,4">
                                                    <Button Content="{Binding Title}" FontSize="11" FontWeight="SemiBold"
                                                            Command="{Binding DataContext.OpenLinkItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                                            Foreground="#7C3AED" Background="Transparent" BorderThickness="0" 
                                                            Cursor="Hand" ToolTip="{Binding Url}"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    
                                    <!-- 進捗とポモドーロ情報 -->
                                    <Grid Grid.Row="6" Margin="0,15,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- 時間情報 -->
                                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                            <TextBlock Text="⏱" FontSize="14" FontWeight="SemiBold" 
                                                       Foreground="#4A90E2" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                            <TextBlock Text="{Binding CurrentTaskRealTimeElapsedMinutes, Converter={StaticResource MinutesToTimeFormatConverter}}" FontSize="14" FontWeight="Bold" 
                                                       Foreground="#4A90E2" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding CurrentTask.EstimatedMinutes, Converter={StaticResource MinutesToTimeFormatConverter}, StringFormat={}/ {0}}" FontSize="14" 
                                                       Foreground="Gray" VerticalAlignment="Center" Margin="4,0,0,0"/>
                                        </StackPanel>
                                        
                                        <!-- 進捗バー -->
                                        <StackPanel Grid.Row="1" Margin="0,0,0,8">
                                            <TextBlock Text="{Binding CurrentTaskRealTimeProgressPercentage, StringFormat={}進捗: {0:F0}%, Mode=OneWay}" 
                                                       FontSize="12" Foreground="#6B7280" Margin="0,0,0,4"/>
                                            <ProgressBar Value="{Binding CurrentTaskRealTimeProgressPercentage, Mode=OneWay}" Maximum="100" 
                                                         Height="10" Background="#E5E7EB" Foreground="#F59E0B"/>
                                        </StackPanel>
                                        
                                        <!-- 期限・添付ファイル情報 -->
                                        <StackPanel Grid.Row="2">
                                            <TextBlock Text="{Binding CurrentTask.DueDate, StringFormat={}⏰ 期限: {0:MM/dd HH:mm}, Mode=OneWay}" 
                                                       FontSize="12" Foreground="#EF4444" Margin="0,0,0,4"
                                                       Visibility="{Binding CurrentTask.DueDate, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}"/>
                                            <StackPanel Orientation="Horizontal"
                                                        Visibility="{Binding CurrentTask.AttachmentCount, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">
                                                <TextBlock Text="📎" FontSize="12" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding CurrentTask.AttachmentCount, StringFormat={}{0}個の添付ファイル, Mode=OneWay}" 
                                                           FontSize="11" Foreground="#6B7280" Margin="4,0,0,0"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>
                            
                            <!-- タスクが選択されていない場合の表示 -->
                            <Border Background="#F9FAFB" CornerRadius="8" Padding="30,40">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentTask}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="⏰" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,12" Foreground="#D1D5DB"/>
                                    <TextBlock Text="実行中のタスクはありません" FontSize="14" FontWeight="SemiBold" 
                                               HorizontalAlignment="Center" Foreground="#6B7280" Margin="0,0,0,6"/>
                                    <TextBlock Text="待機中タスクから「▶」ボタンで" FontSize="11" 
                                               HorizontalAlignment="Center" Foreground="#9CA3AF" Margin="0,0,0,3"/>
                                    <TextBlock Text="25分セッションを開始してください" FontSize="11" 
                                               HorizontalAlignment="Center" Foreground="#9CA3AF"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- 完了タスク列 -->
            <Border Grid.Column="3" Background="White" Margin="3,0,0,0" CornerRadius="12">
                <i:Interaction.Behaviors>
                    <behaviors:KanbanDragDropBehavior TargetStatus="Completed"/>
                </i:Interaction.Behaviors>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 列ヘッダー -->
                    <Border Grid.Row="0" Background="#F0FDF4" CornerRadius="12,12,0,0" Padding="20,15">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                        <Ellipse Width="12" Height="12" Fill="#10B981" VerticalAlignment="Center"/>
                                        <TextBlock Text="完了" FontSize="16" FontWeight="Bold" Margin="8,0,0,0" 
                                                   Foreground="{StaticResource TextLight}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding DoneTasksEstimatedMinutes, Converter={StaticResource MinutesToTimeFormatConverter}, StringFormat={}（見積: {0}）}" 
                                                   FontSize="12" Foreground="#6B7280" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding DoneTasksTotalElapsedMinutes, Converter={StaticResource MinutesToTimeFormatConverter}, StringFormat={}（実績: {0}）}" 
                                                   FontSize="12" Foreground="#6B7280" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <ToggleButton Grid.Column="1" 
                                              IsChecked="{Binding ShowTodayCompletedOnly}"
                                              ToolTip="本日完了タスクのみ表示"
                                              Background="#10B981" 
                                              Foreground="White"
                                              Padding="8,4"
                                              FontSize="10"
                                              BorderThickness="0"
                                              VerticalAlignment="Center">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                CornerRadius="4"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" 
                                                                              VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter Property="Background" Value="#059669"/>
                                                    <Setter Property="Content" Value="📅 今日"/>
                                                </Trigger>
                                                <Trigger Property="IsChecked" Value="False">
                                                    <Setter Property="Background" Value="#10B981"/>
                                                    <Setter Property="Content" Value="📋 全て"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>
                            </Grid>
                            <TextBlock Text="{Binding FilteredDoneTasksCollection.Count, StringFormat={}タスク数: {0}}" 
                                       FontSize="12" Foreground="Gray" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- タスクリスト -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="10">
                        <ItemsControl ItemsSource="{Binding FilteredDoneTasksCollection}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource KanbanTaskCard}" Margin="0,0,0,8" BorderBrush="#10B981" Opacity="0.8"
                                            MouseLeftButtonDown="TaskCard_MouseLeftButtonDown"
                                            Tag="{Binding}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- タスクヘッダー -->
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                        <TextBlock Text="✅" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="14"
                                                               TextWrapping="Wrap" LineHeight="18"
                                                               TextDecorations="Strikethrough" Margin="0,0,8,0"/>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Right">
                                                    <!-- 3点メニューボタン -->
                                                    <Button Content="⋯" ToolTip="その他の操作" FontSize="16" FontWeight="Bold"
                                                            Style="{StaticResource KanbanActionButton}"
                                                            Background="#E5E7EB" Foreground="#374151" Margin="1"
                                                            Click="MenuButton_Click" Tag="{Binding}">
                                                        <Button.ContextMenu>
                                                            <ContextMenu>
                                                                <MenuItem Header="▶ 実行中に戻す"
                                                                          Click="MenuItem_Click" Tag="MoveCompletedTaskToExecuting"/>
                                                                <MenuItem Header="⏸ 待機中に戻す"
                                                                          Click="MenuItem_Click" Tag="MoveCompletedTaskToWaiting"/>
                                                                <MenuItem Header="↩ 未開始に戻す"
                                                                          Click="MenuItem_Click" Tag="ResetTask"/>
                                                                <Separator/>
                                                                <MenuItem Header="📝 詳細を開く"
                                                                          Click="MenuItem_Click" Tag="OpenTaskDetail"/>
                                                                <MenuItem Header="📋 テンプレート作成"
                                                                          Click="MenuItem_Click" Tag="CreateTemplateFromTask"/>
                                                                <Separator/>
                                                                <MenuItem Header="🗑 削除"
                                                                          Click="MenuItem_Click" Tag="DeleteTask"/>
                                                            </ContextMenu>
                                                        </Button.ContextMenu>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                            
                                            <!-- 完了日時 -->
                                            <TextBlock Grid.Row="1" 
                                                       Text="{Binding CompletedAt, StringFormat={}完了: {0:MM/dd HH:mm}}" 
                                                       FontSize="11" Foreground="Green" Margin="0,4,0,0"/>
                                            
                                            <!-- 画像表示 -->
                                            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" 
                                                         Margin="0,4,0,0" MaxHeight="60"
                                                         Visibility="{Binding HasImages, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <ItemsControl ItemsSource="{Binding ImageAttachments}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border CornerRadius="4" Margin="0,0,4,0" Background="White" BorderThickness="1" BorderBrush="#E5E7EB" Opacity="0.7">
                                                                <Image Source="{Binding}" Width="50" Height="50" 
                                                                       Stretch="UniformToFill" ToolTip="{Binding}"
                                                                       Cursor="Hand">
                                                                    <Image.InputBindings>
                                                                        <MouseBinding MouseAction="LeftClick" 
                                                                                    Command="{Binding DataContext.OpenImageCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                                    CommandParameter="{Binding}"/>
                                                                    </Image.InputBindings>
                                                                </Image>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </ScrollViewer>
                                            
                                            <!-- カテゴリとタグ -->
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,4,0,0">
                                                <Border Background="{StaticResource SecondaryBrush}" CornerRadius="3" Margin="0,0,4,0"
                                                        Visibility="{Binding Category, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBlock Text="{Binding Category}" FontSize="10" 
                                                               Foreground="White" Padding="4,2"/>
                                                </Border>
                                                <TextBlock Text="{Binding TagsText, Mode=OneWay}" FontSize="10" 
                                                           Foreground="Gray" VerticalAlignment="Center"
                                                           Visibility="{Binding TagsText, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}"/>
                                            </StackPanel>
                                            
                                            <!-- リンク -->
                                            <ItemsControl Grid.Row="3" ItemsSource="{Binding Links}" Margin="0,6,0,0"
                                                         Visibility="{Binding Links.Count, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="#F3E8FF" CornerRadius="3" Margin="0,0,3,0" Padding="6,2">
                                                            <Button Content="{Binding Title}" FontSize="9" 
                                                                    Command="{Binding DataContext.OpenLinkItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    CommandParameter="{Binding}"
                                                                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                                                    Foreground="#7C3AED" Background="Transparent" BorderThickness="0" 
                                                                    Cursor="Hand" ToolTip="{Binding Url}"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                            
                                            <!-- 実行時間 -->
                                            <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock Text="{Binding ActualMinutes, Converter={StaticResource MinutesToTimeFormatConverter}, StringFormat={}⏱ {0}}" 
                                                           FontSize="12" Foreground="#10B981" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding EstimatedMinutes, Converter={StaticResource MinutesToTimeFormatConverter}, StringFormat={}/ {0}}" 
                                                           FontSize="12" Foreground="Gray" Margin="2,0,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>