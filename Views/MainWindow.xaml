<Window x:Class="PomodoroTimer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:PomodoroTimer.Models"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:behaviors="clr-namespace:PomodoroTimer.Behaviors"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:converters="clr-namespace:PomodoroTimer.Converters"
        Title="ポモドーロタイマー - カンバンボード" 
        Height="900" Width="1600"
        MinHeight="800" MinWidth="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        Visibility="Visible"
        Background="{StaticResource BackgroundLight}">

    <Window.Resources>
        <converters:MinutesToTimeFormatConverter x:Key="MinutesToTimeFormatConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" MinWidth="200" MaxWidth="350"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- サイドパネル（フィルター・検索のみ） -->
        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Background="White" Margin="10,10,0,10" CornerRadius="12" Padding="15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- サイドバータイトル -->
                    <TextBlock Text="🔍 検索・フィルター" FontSize="16" FontWeight="Bold" 
                               Foreground="#1F2937" Margin="0,0,0,16"/>
                    
                    <!-- クイックタスク追加エリア -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="🚀 クイック追加" FontSize="12" FontWeight="Bold" Foreground="#374151" Margin="0,0,0,6"/>
                        <Grid HorizontalAlignment="Stretch">
                            <TextBox x:Name="QuickTaskInput" 
                                     Text="{Binding QuickTaskText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource SearchTextBox}"
                                     ToolTip="タスク名を入力してEnterで即座に追加"
                                     FontWeight="SemiBold" Background="#F0F9FF" BorderBrush="#3B82F6"
                                     KeyDown="QuickTaskInput_KeyDown"
                                     TextChanged="QuickTaskInput_TextChanged"
                                     LostFocus="QuickTaskInput_LostFocus" Height="32"/>
                            <!-- オートコンプリート候補リスト -->
                            <Popup x:Name="AutoCompletePopup" 
                                   Placement="Bottom" 
                                   PlacementTarget="{Binding ElementName=QuickTaskInput}"
                                   StaysOpen="False"
                                   MaxHeight="150">
                                <Border Background="White" BorderBrush="#3B82F6" BorderThickness="1" CornerRadius="4">
                                    <ListBox x:Name="AutoCompleteList"
                                             ItemsSource="{Binding FilteredTaskHistory}"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             MaxHeight="140"
                                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                                             SelectionChanged="AutoCompleteList_SelectionChanged">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" Padding="8,4" FontSize="12"
                                                          Background="Transparent" Foreground="#1F2937"/>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                        <ListBox.ItemContainerStyle>
                                            <Style TargetType="ListBoxItem">
                                                <Setter Property="Padding" Value="0"/>
                                                <Setter Property="Margin" Value="0"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#EBF8FF"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ListBox.ItemContainerStyle>
                                    </ListBox>
                                </Border>
                            </Popup>
                        </Grid>
                        
                        <!-- タスク追加ボタン -->
                        <Button Command="{Binding AddTaskCommand}" Margin="0,8,0,0"
                                Style="{StaticResource RoundButton}" Background="#10B981" Foreground="White"
                                Height="32" Padding="8,6" ToolTip="新しいタスクを追加" HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="➕" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <TextBlock Text="タスク追加" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    
                    <!-- 検索・フィルターエリア（折りたたみ） -->
                    <Expander Header="🔍 検索・絞り込み" FontSize="12" FontWeight="Bold" 
                              Foreground="#374151" Margin="0,16,0,16" IsExpanded="False">
                        <StackPanel Margin="0,8,0,0">
                        
                        <!-- 検索ボックス -->
                        <StackPanel Margin="0,0,0,8">
                            <TextBlock Text="キーワード" FontSize="10" Foreground="#6B7280" Margin="0,0,0,2"/>
                            <TextBox Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource SearchTextBox}"
                                     ToolTip="タスク名や説明で検索"/>
                        </StackPanel>
                        
                        <!-- カテゴリフィルター -->
                        <StackPanel Margin="0,0,0,8">
                            <TextBlock Text="カテゴリ" FontSize="10" Foreground="#6B7280" Margin="0,0,0,2"/>
                            <ComboBox ItemsSource="{Binding AvailableCategories}"
                                      SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                                      Style="{StaticResource FilterComboBox}"
                                      ToolTip="カテゴリで絞り込み"/>
                        </StackPanel>
                        
                        <!-- タグフィルター -->
                        <StackPanel Margin="0,0,0,8">
                            <TextBlock Text="タグ" FontSize="10" Foreground="#6B7280" Margin="0,0,0,2"/>
                            <ComboBox ItemsSource="{Binding AvailableTags}"
                                      SelectedItem="{Binding SelectedTag, Mode=TwoWay}"
                                      Style="{StaticResource FilterComboBox}"
                                      ToolTip="タグで絞り込み"/>
                        </StackPanel>
                        
                        <!-- 期限フィルター -->
                        <StackPanel Margin="0,0,0,8">
                            <TextBlock Text="期限" FontSize="10" Foreground="#6B7280" Margin="0,0,0,2"/>
                            <ComboBox SelectedItem="{Binding SelectedDueDateFilter, Mode=TwoWay}"
                                      Style="{StaticResource FilterComboBox}"
                                      ToolTip="期限で絞り込み">
                                <ComboBoxItem Content="すべて" Tag="All"/>
                                <ComboBoxItem Content="期限なし" Tag="None"/>
                                <ComboBoxItem Content="今日まで" Tag="Today"/>
                                <ComboBoxItem Content="明日まで" Tag="Tomorrow"/>
                                <ComboBoxItem Content="1週間以内" Tag="ThisWeek"/>
                                <ComboBoxItem Content="期限切れ" Tag="Overdue"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- 優先度フィルター -->
                        <StackPanel Margin="0,0,0,8">
                            <TextBlock Text="優先度" FontSize="10" Foreground="#6B7280" Margin="0,0,0,2"/>
                            <ComboBox ItemsSource="{Binding AvailablePriorities}"
                                      SelectedItem="{Binding SelectedPriority, Mode=TwoWay}"
                                      Style="{StaticResource FilterComboBox}"
                                      ToolTip="優先度で絞り込み">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource PriorityToStringConverter}}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- クリアボタン -->
                        <Button Content="🗑️ クリア" Command="{Binding ClearFiltersCommand}"
                                Style="{StaticResource RoundButton}" Background="#EF4444" Foreground="White"
                                FontSize="11" Padding="8,6" ToolTip="全ての検索・フィルター条件をクリア"
                                HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </Expander>
                    
                    <!-- クイックテンプレート（折りたたみ） -->
                    <Expander Header="⚡ クイックテンプレート" FontSize="12" FontWeight="Bold" 
                              Foreground="#374151" Margin="0,0,0,16" IsExpanded="False">
                        <StackPanel Margin="0,8,0,0">
                            <!-- テンプレート一覧 -->
                            <ScrollViewer MaxHeight="100" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,0,0,8">
                                <ItemsControl ItemsSource="{Binding QuickTemplates}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.CreateTaskFromTemplateCommand}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource RoundButton}" 
                                                    Background="{Binding BackgroundBrush}" Foreground="White"
                                                    Height="28" Margin="2" Padding="6,4" ToolTip="{Binding Description}" FontSize="10">
                                                <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold"/>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                            
                            <!-- 管理ボタン -->
                            <Button Command="{Binding OpenQuickTemplateManagerCommand}"
                                    Style="{StaticResource RoundButton}" Background="#8B5CF6" Foreground="White"
                                    Height="28" Padding="6,4" ToolTip="クイックテンプレート管理" HorizontalAlignment="Stretch">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="⚙" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBlock Text="テンプレート管理" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Expander>
                    
                    <!-- 管理機能 -->
                    <StackPanel>
                        <TextBlock Text="⚙️ 管理・操作" FontSize="12" FontWeight="Bold" Foreground="#374151" Margin="0,0,0,8"/>
                        
                        <!-- タスク操作 -->
                        <TextBlock Text="タスク操作" FontSize="10" Foreground="#6B7280" Margin="0,0,0,4"/>
                        <Button Command="{Binding CreateTaskFromTaskTemplateCommand}" Margin="0,0,0,4"
                                Style="{StaticResource RoundButton}" Background="#6366F1" Foreground="White"
                                Height="32" Padding="8,6" ToolTip="テンプレート選択" HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="📋" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <TextBlock Text="通常テンプレート" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding OpenStatisticsCommand}" Margin="0,0,0,8"
                                Style="{StaticResource RoundButton}" Background="#3B82F6" Foreground="White"
                                Height="32" Padding="8,6" ToolTip="統計とレポート" HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="📈" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <TextBlock Text="統計" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- カンバン操作 -->
                        <TextBlock Text="カンバン操作" FontSize="10" Foreground="#6B7280" Margin="0,0,0,4"/>
                        <Button Command="{Binding OpenBulkOperationCommand}" Margin="0,0,0,8"
                                Style="{StaticResource RoundButton}" Background="#3B82F6" Foreground="White"
                                Height="32" Padding="8,6" ToolTip="一括操作" HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="📋" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <TextBlock Text="一括操作" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- テンプレート管理 -->
                        <TextBlock Text="テンプレート管理" FontSize="10" Foreground="#6B7280" Margin="0,0,0,4"/>
                        <Button Command="{Binding OpenTemplateManagerCommand}" Margin="0,0,0,4"
                                Style="{StaticResource RoundButton}" Background="#EC4899" Foreground="White"
                                Height="32" Padding="8,6" ToolTip="通常テンプレートの管理" HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="📋" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <TextBlock Text="通常テンプレート管理" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        
                        <!-- データ管理 -->
                        <TextBlock Text="データ管理" FontSize="10" Foreground="#6B7280" Margin="0,0,0,4"/>
                        <Button Command="{Binding ImportFromMicrosoftGraphCommand}" Margin="0,0,0,4"
                                Style="{StaticResource RoundButton}" Background="#F59E0B" Foreground="White"
                                Height="32" Padding="8,6" ToolTip="Microsoft Graphからタスクをインポート" HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="📊" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <TextBlock Text="インポート" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding OpenProjectTagManagerCommand}" Margin="0,0,0,8"
                                Style="{StaticResource RoundButton}" Background="#EC4899" Foreground="White"
                                Height="32" Padding="8,6" ToolTip="プロジェクトとタグの管理" HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="🏷️" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <TextBlock Text="プロジェクト・タグ" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- システム設定 -->
                        <TextBlock Text="システム設定" FontSize="10" Foreground="#6B7280" Margin="0,0,0,4"/>
                        <Button Command="{Binding OpenSettingsCommand}"
                                Style="{StaticResource RoundButton}" Background="#6B7280" Foreground="White"
                                Height="32" Padding="8,6" ToolTip="アプリの設定" HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="⚙️" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <TextBlock Text="設定" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <!-- リサイザー -->
        <GridSplitter Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" 
                      Width="6" Background="#E5E7EB" 
                      HorizontalAlignment="Center" VerticalAlignment="Stretch"
                      ResizeBehavior="PreviousAndNext" ResizeDirection="Columns"/>

        <!-- メインエリアヘッダー（タイマー・クイックアクション） -->
        <Border Grid.Row="0" Grid.Column="2" Background="White" Margin="5,10,10,5" CornerRadius="12" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- タイマー表示 -->
                <Border Grid.Row="0" Grid.Column="0" Background="#F8FAFC" CornerRadius="12" Padding="25,15" Margin="0,0,20,0">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Margin="0,0,20,0">
                            <TextBlock Text="{Binding TimeRemaining}" FontSize="36" FontWeight="Bold" 
                                       Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding SessionTypeText}" FontSize="14" Foreground="Gray" 
                                       HorizontalAlignment="Center" Margin="0,4,0,0"/>
                            <ProgressBar Value="{Binding ProgressValue, Mode=OneWay}" Maximum="100" 
                                         Height="8" Width="200" Margin="0,8,0,0"/>
                        </StackPanel>
                        <StackPanel VerticalAlignment="Center">
                            <Button Content="{Binding StartPauseButtonText}" Command="{Binding StartPauseCommand}"
                                    Style="{StaticResource RoundButton}" Height="40" FontSize="14" Margin="0,0,0,8" Width="100"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <Button Content="停止" Command="{Binding StopCommand}"
                                        Style="{StaticResource RoundButton}" Background="Gray" Height="32" FontSize="12" 
                                        Width="60" Margin="0,0,4,0"/>
                                <Button Content="スキップ" Command="{Binding SkipCommand}"
                                        Style="{StaticResource RoundButton}" Background="{StaticResource SecondaryBrush}" 
                                        Height="32" FontSize="12" Width="60" Margin="4,0,0,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <Button Content="+1分" Command="{Binding AddOneMinuteCommand}"
                                        Style="{StaticResource RoundButton}" Background="#10B981" Foreground="White"
                                        Height="28" FontSize="11" Width="60" Margin="0,0,4,0" 
                                        ToolTip="タイマーに1分追加"/>
                                <Button Content="+10秒" Command="{Binding AddTenSecondsCommand}"
                                        Style="{StaticResource RoundButton}" Background="#059669" Foreground="White"
                                        Height="28" FontSize="11" Width="60" Margin="4,0,0,0"
                                        ToolTip="タイマーに10秒追加"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="-1分" Command="{Binding SubtractOneMinuteCommand}"
                                        Style="{StaticResource RoundButton}" Background="#EF4444" Foreground="White"
                                        Height="28" FontSize="11" Width="60" Margin="0,0,4,0" 
                                        ToolTip="タイマーから1分減らす"/>
                                <Button Content="-10秒" Command="{Binding SubtractTenSecondsCommand}"
                                        Style="{StaticResource RoundButton}" Background="#DC2626" Foreground="White"
                                        Height="28" FontSize="11" Width="60" Margin="4,0,0,0"
                                        ToolTip="タイマーから10秒減らす"/>
                            </StackPanel>
                            <!-- 集中モードトグルボタン -->
                            <ToggleButton x:Name="FocusModeToggle" 
                                          IsChecked="{Binding EnableFocusMode, Mode=TwoWay}" 
                                          Click="FocusModeToggle_Click"
                                          Height="32" Width="124" Margin="0,8,0,0"
                                          ToolTip="集中モードのON/OFF切り替え"
                                          BorderThickness="0" Cursor="Hand">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Background" Value="#E5E7EB"/>
                                        <Setter Property="Foreground" Value="#374151"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="6"
                                                            Padding="8,4"
                                                            BorderThickness="0">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Setter Property="Background" Value="#6366F1"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#D1D5DB"/>
                                                        </Trigger>
                                                        <MultiTrigger>
                                                            <MultiTrigger.Conditions>
                                                                <Condition Property="IsChecked" Value="True"/>
                                                                <Condition Property="IsMouseOver" Value="True"/>
                                                            </MultiTrigger.Conditions>
                                                            <Setter Property="Background" Value="#5B5FC7"/>
                                                        </MultiTrigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ToggleButton.Style>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🔒" FontSize="12" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBlock Text="集中モード" FontSize="11" VerticalAlignment="Center"/>
                                </StackPanel>
                            </ToggleButton>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                
                <!-- 統計情報 -->
                <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Style="{StaticResource StatisticCard}" Background="{StaticResource PrimaryBrush}" Margin="0,0,8,0">
                        <StackPanel>
                            <TextBlock Text="ポモドーロ" Foreground="White" FontSize="11"/>
                            <TextBlock Text="{Binding CompletedPomodoros}" Foreground="White" 
                                       FontSize="20" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource StatisticCard}" Background="{StaticResource SecondaryBrush}">
                        <StackPanel>
                            <TextBlock Text="完了タスク" Foreground="White" FontSize="11"/>
                            <TextBlock Text="{Binding CompletedTasks}" Foreground="White" 
                                       FontSize="20" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                
            </Grid>
        </Border>

        <!-- カンバンボード -->
        <Grid Grid.Row="1" Grid.Column="2" Margin="5,5,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 未開始タスク列 -->
            <Border Grid.Column="0" Background="White" Margin="0,0,3,0" CornerRadius="12">
                <i:Interaction.Behaviors>
                    <behaviors:KanbanDragDropBehavior TargetStatus="Todo"/>
                </i:Interaction.Behaviors>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 列ヘッダー -->
                    <Border Grid.Row="0" Background="#F8FAFC" CornerRadius="12,12,0,0" Padding="20,15">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="12" Height="12" Fill="#94A3B8" VerticalAlignment="Center"/>
                                <TextBlock Text="未開始" FontSize="16" FontWeight="Bold" Margin="8,0,0,0" 
                                           Foreground="{StaticResource TextLight}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Text="{Binding TodoTasks.Count, StringFormat={}タスク数: {0}}" 
                                           FontSize="12" Foreground="Gray"/>
                                <TextBlock Text="{Binding TodoTasksEstimatedMinutes, Converter={StaticResource MinutesToTimeFormatConverter}, StringFormat={}（見積: {0}）}" 
                                           FontSize="12" Foreground="#6B7280" Margin="8,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- タスクリスト -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="10">
                        <ItemsControl ItemsSource="{Binding TodoTasks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource KanbanTaskCard}" Margin="0,0,0,8"
                                            MouseLeftButtonDown="TaskCard_MouseLeftButtonDown"
                                            Tag="{Binding}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- タスクヘッダー -->
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                        <Ellipse Style="{StaticResource PriorityIndicator}"
                                                                 Fill="{Binding Priority, Converter={StaticResource PriorityToColorConverter}}"/>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="14"
                                                               TextWrapping="Wrap" LineHeight="18" Margin="0,0,8,0"/>
                                                    <!-- 期限表示 -->
                                                    <TextBlock Text="{Binding DueDateText}" FontSize="11" FontWeight="SemiBold"
                                                               Foreground="{Binding DueDateColor}" Margin="0,2,0,0"
                                                               Visibility="{Binding DueDateText, Converter={StaticResource StringToVisibilityConverter}}"/>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Right">
                                                    <!-- 3点メニューボタン -->
                                                    <Button Content="⋯" ToolTip="その他の操作" FontSize="16" FontWeight="Bold"
                                                            Style="{StaticResource KanbanActionButton}"
                                                            Background="#E5E7EB" Foreground="#374151" Margin="1"
                                                            Click="MenuButton_Click" Tag="{Binding}">
                                                        <Button.ContextMenu>
                                                            <ContextMenu>
                                                                <MenuItem Header="▶ 開始"
                                                                          Click="MenuItem_Click" Tag="StartTask"/>
                                                                <Separator/>
                                                                <MenuItem Header="📝 詳細を開く"
                                                                          Click="MenuItem_Click" Tag="OpenTaskDetail"/>
