<Window x:Class="PomodoroTimer.Views.TaskTemplateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:PomodoroTimer.Models"
        mc:Ignorable="d"
        Title="タスクテンプレート管理" Height="800" Width="1300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#F8F9FA">

    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Foreground" Value="#1F2937"/>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#9CA3AF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#6B7280"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4B5563"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#EF4444"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DC2626"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#10B981"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="タスクテンプレート管理" Style="{StaticResource HeaderTextStyle}"/>
            <TextBlock Text="効率的なタスク管理のためのテンプレートを作成・管理し、ワンクリックでタスクを作成できます" 
                       FontSize="14" Foreground="#6B7280"/>
        </StackPanel>

        <!-- メインコンテンツ -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- 左サイドバー: 検索・フィルター -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <!-- 検索セクション -->
                <Border Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,16"
                        BorderBrush="#E5E7EB" BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.05"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="🔍 検索・フィルター" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="#374151" Margin="0,0,0,12"/>
                        <TextBox x:Name="SearchTextBox" Height="40"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="14" Padding="12,8" BorderBrush="#E5E7EB" BorderThickness="2"
                                 VerticalContentAlignment="Center" Margin="0,0,0,8"/>
                        <TextBlock Text="カテゴリ" FontSize="12" FontWeight="SemiBold" 
                                   Foreground="#374151" Margin="0,0,0,4"/>
                        <ComboBox x:Name="CategoryComboBox" Height="40"
                                  SelectedItem="{Binding SelectedTemplateCategory}"
                                  ItemsSource="{Binding TemplateCategories}"
                                  FontSize="14" VerticalContentAlignment="Center" Margin="0,0,0,8"/>
                        <Button Content="🗑️ フィルタークリア" Command="{Binding ClearFiltersCommand}" 
                                Style="{StaticResource SecondaryButton}" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>

                <!-- アクションボタン -->
                <Border Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,16"
                        BorderBrush="#E5E7EB" BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.05"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="⚡ アクション" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="#374151" Margin="0,0,0,12"/>
                        <Button Content="➕ 新規テンプレート作成" Command="{Binding CreateTemplateCommand}" 
                                Style="{StaticResource ModernButton}" HorizontalAlignment="Stretch" Margin="0,0,0,8"/>
                        <Button Content="📥 インポート" Command="{Binding ImportTemplatesCommand}" 
                                Style="{StaticResource SecondaryButton}" HorizontalAlignment="Stretch" Margin="0,0,0,8"/>
                        <Button Content="📤 エクスポート" Command="{Binding ExportTemplatesCommand}" 
                                Style="{StaticResource SecondaryButton}" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- 中央: テンプレート一覧 -->
            <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="20" Margin="0,0,20,0"
                    BorderBrush="#E5E7EB" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.05"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="📋" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="テンプレート一覧" FontSize="18" FontWeight="SemiBold" Foreground="#374151"/>
                        <TextBlock Text="{Binding FilteredTemplates.Count, StringFormat='{}({0}件)'}" 
                                   FontSize="14" Foreground="#6B7280" VerticalAlignment="Center" Margin="8,0,0,0"/>
                    </StackPanel>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                                  HorizontalScrollBarVisibility="Disabled" CanContentScroll="False">
                        <ItemsControl ItemsSource="{Binding FilteredTemplates}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#E5E7EB" BorderThickness="1" Margin="0,0,0,8" Padding="16" 
                                            Background="White" CornerRadius="8" Cursor="Hand">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="6" ShadowDepth="2" Opacity="0.08"/>
                                        </Border.Effect>
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" 
                                                          Command="{Binding DataContext.ShowTemplateDetailsCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                          CommandParameter="{Binding}"/>
                                            <MouseBinding MouseAction="LeftDoubleClick" 
                                                          Command="{Binding DataContext.CreateTaskFromTemplateCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                          CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="BorderBrush" Value="#3B82F6"/>
                                                        <Setter Property="Background" Value="#F8FAFC"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- ヘッダー -->
                                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding Name}" FontWeight="Bold" 
                                                           FontSize="14" Foreground="#1F2937" TextTrimming="CharacterEllipsis"/>
                                                <Border Grid.Column="1" Background="{Binding PriorityColor}" CornerRadius="8" 
                                                        Padding="6,2" Margin="4,0,0,0">
                                                    <TextBlock Text="{Binding PriorityText}" FontSize="9" 
                                                               Foreground="White" FontWeight="Medium"/>
                                                </Border>
                                            </Grid>

                                            <!-- タスクタイトル -->
                                            <TextBlock Grid.Row="1" Text="{Binding TaskTitle}" FontStyle="Italic" 
                                                       FontSize="12" Foreground="#4B5563" Margin="0,0,0,4"
                                                       TextTrimming="CharacterEllipsis"/>
                                            
                                            <!-- 説明 -->
                                            <TextBlock Grid.Row="2" Text="{Binding Description}" FontSize="11" 
                                                       Foreground="#6B7280" Margin="0,0,0,8" TextWrapping="Wrap" 
                                                       MaxHeight="30" TextTrimming="CharacterEllipsis"/>
                                            
                                            <!-- メタデータ -->
                                            <StackPanel Grid.Row="3" Margin="0,0,0,0">
                                                <WrapPanel Margin="0,0,0,4">
                                                    <Border Background="#DBEAFE" CornerRadius="4" Padding="4,2" Margin="0,0,4,2">
                                                        <TextBlock Text="{Binding Category}" FontSize="9" Foreground="#1D4ED8" FontWeight="Medium"/>
                                                    </Border>
                                                    <Border Background="#F3E8FF" CornerRadius="4" Padding="4,2" Margin="0,0,4,2">
                                                        <TextBlock Text="{Binding DefaultChecklist.Count, StringFormat='{}📋{0}'}" 
                                                                   FontSize="9" Foreground="#7C3AED" FontWeight="Medium"/>
                                                    </Border>
                                                    <Border Background="#ECFDF5" CornerRadius="4" Padding="4,2" Margin="0,0,4,2">
                                                        <TextBlock Text="{Binding DefaultLinks.Count, StringFormat='{}🔗{0}'}" 
                                                                   FontSize="9" Foreground="#047857" FontWeight="Medium"/>
                                                    </Border>
                                                    <Border Background="#F3F4F6" CornerRadius="4" Padding="4,2" Margin="0,0,4,2">
                                                        <TextBlock Text="{Binding UsageCount, StringFormat='{}使用{0}回'}" 
                                                                   FontSize="9" Foreground="#6B7280"/>
                                                    </Border>
                                                </WrapPanel>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- 右サイドバー: テンプレート詳細表示・編集 -->
            <Border Grid.Column="2" Background="White" CornerRadius="12" Padding="20"
                    BorderBrush="#E5E7EB" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.05"/>
                </Border.Effect>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="📋 テンプレート詳細" FontSize="18" FontWeight="SemiBold" 
                                   Foreground="#374151" Margin="0,0,0,16"/>

                        <!-- テンプレートが選択されている場合の詳細表示 -->
                        <StackPanel x:Name="TemplateDetailsPanel" DataContext="{Binding SelectedTemplate}">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            
                            <!-- 表示モード -->
                            <StackPanel x:Name="ViewModePanel">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DataContext.IsEditMode, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                                <!-- テンプレート名 -->
                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock Text="テンプレート名" FontSize="12" FontWeight="SemiBold" 
                                               Foreground="#374151" Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" 
                                               Foreground="#1F2937" TextWrapping="Wrap"/>
                                </StackPanel>

                                <!-- 説明 -->
                                <StackPanel Margin="0,0,0,16">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedTemplate.Description}" Value="">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding SelectedTemplate.Description}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <TextBlock Text="説明" FontSize="12" FontWeight="SemiBold" 
                                               Foreground="#374151" Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding Description}" FontSize="13" 
                                               Foreground="#4B5563" TextWrapping="Wrap"/>
                                </StackPanel>

                                <!-- タスクタイトル -->
                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock Text="作成されるタスクタイトル" FontSize="12" FontWeight="SemiBold" 
                                               Foreground="#374151" Margin="0,0,0,4"/>
                                    <Border Background="#F8FAFC" CornerRadius="6" Padding="12,8" BorderBrush="#E5E7EB" BorderThickness="1">
                                        <TextBlock Text="{Binding TaskTitle}" FontSize="14" FontWeight="SemiBold"
                                                   Foreground="#1F2937" TextWrapping="Wrap"/>
                                    </Border>
                                </StackPanel>

                                <!-- タスク説明 -->
                                <StackPanel Margin="0,0,0,16">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding TaskDescription}" Value="">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding TaskDescription}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <TextBlock Text="作成されるタスク説明" FontSize="12" FontWeight="SemiBold" 
                                               Foreground="#374151" Margin="0,0,0,4"/>
                                    <Border Background="#F8FAFC" CornerRadius="6" Padding="12,8" BorderBrush="#E5E7EB" BorderThickness="1">
                                        <TextBlock Text="{Binding TaskDescription}" FontSize="13" 
                                                   Foreground="#4B5563" TextWrapping="Wrap"/>
                                    </Border>
                                </StackPanel>

                                <!-- メタ情報 -->
                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock Text="メタ情報" FontSize="12" FontWeight="SemiBold" 
                                               Foreground="#374151" Margin="0,0,0,8"/>
                                    <WrapPanel>
                                        <Border Background="#DBEAFE" CornerRadius="8" Padding="8,4" Margin="0,0,8,4">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="📁" FontSize="12" Margin="0,0,4,0"/>
                                                <TextBlock Text="{Binding Category}" FontSize="12" 
                                                           Foreground="#1D4ED8" FontWeight="Medium"/>
                                            </StackPanel>
                                        </Border>
                                        <Border Background="{Binding PriorityColor}" CornerRadius="8" Padding="8,4" Margin="0,0,8,4">
                                            <TextBlock Text="{Binding PriorityText}" FontSize="12" 
                                                       Foreground="White" FontWeight="Medium"/>
                                        </Border>
                                        <Border Background="#F3F4F6" CornerRadius="8" Padding="8,4" Margin="0,0,8,4">
                                            <TextBlock Text="{Binding UsageCount, StringFormat='{}使用回数: {0}回'}" 
                                                       FontSize="12" Foreground="#6B7280"/>
                                        </Border>
                                    </WrapPanel>
                                </StackPanel>

                                <!-- タグ -->
                                <StackPanel Margin="0,0,0,16">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Tags.Count}" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <TextBlock Text="タグ" FontSize="12" FontWeight="SemiBold" 
                                               Foreground="#374151" Margin="0,0,0,8"/>
                                    <ItemsControl ItemsSource="{Binding Tags}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#E5E7EB" CornerRadius="12" Padding="8,4" Margin="0,0,4,4">
                                                    <TextBlock Text="{Binding}" FontSize="11" Foreground="#374151" FontWeight="Medium"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>

                                <!-- アクションボタン -->
                                <StackPanel>
                                    <Button Content="✅ このテンプレートでタスク作成" 
                                            Command="{Binding DataContext.CreateTaskFromTemplateCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                            CommandParameter="{Binding}" 
                                            Style="{StaticResource SuccessButton}"
                                            HorizontalAlignment="Stretch" Margin="0,0,0,8"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="✏️ 編集" Command="{Binding DataContext.EditTemplateCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                CommandParameter="{Binding}" Style="{StaticResource ModernButton}"/>
                                        <Button Content="📋 複製" Command="{Binding DataContext.DuplicateTemplateCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                CommandParameter="{Binding}" Style="{StaticResource SecondaryButton}"/>
                                        <Button Content="🗑️ 削除" Command="{Binding DataContext.DeleteTemplateCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                CommandParameter="{Binding}" Style="{StaticResource DangerButton}"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>

                            <!-- 編集モード -->
                            <StackPanel x:Name="EditModePanel" Visibility="{Binding DataContext.IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}, RelativeSource={RelativeSource AncestorType=Window}}">
                                <TextBlock Text="📝 テンプレート編集" FontSize="16" FontWeight="SemiBold" 
                                           Foreground="#374151" Margin="0,0,0,16"/>
                                
                                <TextBlock Text="テンプレート名" FontSize="12" FontWeight="SemiBold" 
                                           Foreground="#374151" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding TemplateEditName}" Height="35" Padding="8" FontSize="13"
                                         BorderBrush="#E5E7EB" BorderThickness="1" Margin="0,0,0,12"/>

                                <TextBlock Text="説明" FontSize="12" FontWeight="SemiBold" 
                                           Foreground="#374151" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding TemplateEditDescription}" Height="60" Padding="8" FontSize="13"
                                         TextWrapping="Wrap" AcceptsReturn="True"
                                         BorderBrush="#E5E7EB" BorderThickness="1" Margin="0,0,0,12"/>

                                <TextBlock Text="タスクタイトル" FontSize="12" FontWeight="SemiBold" 
                                           Foreground="#374151" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding TemplateEditTaskTitle}" Height="35" Padding="8" FontSize="13"
                                         BorderBrush="#E5E7EB" BorderThickness="1" Margin="0,0,0,12"/>

                                <TextBlock Text="タスク説明" FontSize="12" FontWeight="SemiBold" 
                                           Foreground="#374151" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding TemplateEditTaskDescription}" Height="60" Padding="8" FontSize="13"
                                         TextWrapping="Wrap" AcceptsReturn="True"
                                         BorderBrush="#E5E7EB" BorderThickness="1" Margin="0,0,0,12"/>

                                <TextBlock Text="カテゴリ" FontSize="12" FontWeight="SemiBold" 
                                           Foreground="#374151" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding TemplateEditCategory}" Height="35" Padding="8" FontSize="13"
                                         BorderBrush="#E5E7EB" BorderThickness="1" Margin="0,0,0,12"/>

                                <TextBlock Text="優先度" FontSize="12" FontWeight="SemiBold" 
                                           Foreground="#374151" Margin="0,0,0,4"/>
                                <ComboBox SelectedItem="{Binding TemplateEditPriority}" Height="35" FontSize="13"
                                          BorderBrush="#E5E7EB" BorderThickness="1" Margin="0,0,0,12">
                                    <ComboBox.Items>
                                        <models:TaskPriority>Low</models:TaskPriority>
                                        <models:TaskPriority>Medium</models:TaskPriority>
                                        <models:TaskPriority>High</models:TaskPriority>
                                        <models:TaskPriority>Urgent</models:TaskPriority>
                                    </ComboBox.Items>
                                </ComboBox>

                                <TextBlock Text="タグ (カンマ区切り)" FontSize="12" FontWeight="SemiBold" 
                                           Foreground="#374151" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding TemplateEditTagsText}" Height="35" Padding="8" FontSize="13"
                                         BorderBrush="#E5E7EB" BorderThickness="1" Margin="0,0,0,12"/>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="💾 保存" Command="{Binding SaveTemplateCommand}" 
                                            Style="{StaticResource SuccessButton}"/>
                                    <Button Content="❌ キャンセル" Command="{Binding CancelEditCommand}" 
                                            Style="{StaticResource SecondaryButton}"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- テンプレート未選択時のメッセージ -->
                        <StackPanel x:Name="NoSelectionPanel">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedTemplate}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <TextBlock Text="テンプレートを選択すると詳細が表示されます" FontSize="14" 
                                       Foreground="#9CA3AF" TextAlignment="Center" Margin="0,40,0,0" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="• クリック: 詳細表示" FontSize="12" 
                                       Foreground="#9CA3AF" TextAlignment="Center" Margin="0,16,0,0" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="• ダブルクリック: タスク作成" FontSize="12" 
                                       Foreground="#9CA3AF" TextAlignment="Center" Margin="0,4,0,0" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- ダイアログボタン -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="✖️ 閉じる" IsCancel="True" Style="{StaticResource SecondaryButton}" 
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>