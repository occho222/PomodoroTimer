<UserControl x:Class="PomodoroTimer.Views.MarkdownEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- タブヘッダー -->
        <Border Grid.Row="0" Background="#F8FAFC" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Margin="0">
                <Button x:Name="EditorTab" Content="エディタ" 
                        Command="{Binding SwitchToEditorCommand}"
                        Style="{StaticResource TabButton}"
                        Background="{Binding IsEditorMode, Converter={StaticResource BooleanToTabBackgroundConverter}}"
                        Foreground="{Binding IsEditorMode, Converter={StaticResource BooleanToTabForegroundConverter}}"
                        BorderThickness="0,0,1,0" BorderBrush="#E2E8F0"
                        Padding="16,8"/>
                <Button x:Name="ViewerTab" Content="プレビュー" 
                        Command="{Binding SwitchToViewerCommand}"
                        Style="{StaticResource TabButton}"
                        Background="{Binding IsEditorMode, Converter={StaticResource InverseBooleanToTabBackgroundConverter}}"
                        Foreground="{Binding IsEditorMode, Converter={StaticResource InverseBooleanToTabForegroundConverter}}"
                        Padding="16,8"/>
            </StackPanel>
        </Border>

        <!-- コンテンツエリア -->
        <Grid Grid.Row="1">
            <!-- エディタモード -->
            <TextBox x:Name="MarkdownTextBox" 
                     Text="{Binding MarkdownText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Disabled"
                     FontFamily="Cascadia Code, Consolas, Courier New"
                     FontSize="13"
                     Background="White"
                     Foreground="#1F2937"
                     BorderThickness="0"
                     Padding="16"
                     Visibility="{Binding IsEditorMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <!-- プレビューモード -->
            <ScrollViewer x:Name="MarkdownViewer"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Background="White"
                          Padding="16"
                          Visibility="{Binding IsEditorMode, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                <ContentPresenter Content="{Binding RenderedMarkdown}"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>