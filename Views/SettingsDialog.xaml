<Window x:Class="PomodoroTimer.Views.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" 
        Height="500" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Pomodoro Timer Settings" FontSize="20" FontWeight="Bold" 
                   Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Timer Settings -->
                <GroupBox Header="Timer Settings" Padding="10" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Work Session:" Grid.Row="0" Grid.Column="0" 
                                   VerticalAlignment="Center" Margin="0,5"/>
                        <TextBox Text="{Binding WorkSessionMinutes}" Grid.Row="0" Grid.Column="1" 
                                 VerticalAlignment="Center" Margin="5" TextAlignment="Center"/>
                        <TextBlock Text="minutes" Grid.Row="0" Grid.Column="2" 
                                   VerticalAlignment="Center" Margin="5,0,0,0"/>

                        <TextBlock Text="Short Break:" Grid.Row="1" Grid.Column="0" 
                                   VerticalAlignment="Center" Margin="0,5"/>
                        <TextBox Text="{Binding ShortBreakMinutes}" Grid.Row="1" Grid.Column="1" 
                                 VerticalAlignment="Center" Margin="5" TextAlignment="Center"/>
                        <TextBlock Text="minutes" Grid.Row="1" Grid.Column="2" 
                                   VerticalAlignment="Center" Margin="5,0,0,0"/>

                        <TextBlock Text="Long Break:" Grid.Row="2" Grid.Column="0" 
                                   VerticalAlignment="Center" Margin="0,5"/>
                        <TextBox Text="{Binding LongBreakMinutes}" Grid.Row="2" Grid.Column="1" 
                                 VerticalAlignment="Center" Margin="5" TextAlignment="Center"/>
                        <TextBlock Text="minutes" Grid.Row="2" Grid.Column="2" 
                                   VerticalAlignment="Center" Margin="5,0,0,0"/>

                        <TextBlock Text="Pomodoros before Long Break:" Grid.Row="3" Grid.Column="0" 
                                   VerticalAlignment="Center" Margin="0,5"/>
                        <TextBox Text="{Binding PomodorosBeforeLongBreak}" Grid.Row="3" Grid.Column="1" 
                                 VerticalAlignment="Center" Margin="5" TextAlignment="Center"/>
                        <TextBlock Text="cycles" Grid.Row="3" Grid.Column="2" 
                                   VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </Grid>
                </GroupBox>

                <!-- Notification Settings -->
                <GroupBox Header="Notification Settings" Padding="10" Margin="0,0,0,15">
                    <StackPanel>
                        <CheckBox Content="Enable Sound Notifications" 
                                  IsChecked="{Binding EnableSoundNotification}" 
                                  Margin="0,5"/>
                        <CheckBox Content="Enable Desktop Notifications" 
                                  IsChecked="{Binding EnableDesktopNotification}" 
                                  Margin="0,5"/>
                        <CheckBox Content="Auto Start Next Session" 
                                  IsChecked="{Binding AutoStartNextSession}" 
                                  Margin="0,5"/>
                    </StackPanel>
                </GroupBox>

                <!-- Appearance Settings -->
                <GroupBox Header="Appearance Settings" Padding="10" Margin="0,0,0,15">
                    <StackPanel>
                        <CheckBox Content="Use Dark Theme" 
                                  IsChecked="{Binding UseDarkTheme}" 
                                  Margin="0,5"/>
                        <CheckBox Content="Minimize to System Tray" 
                                  IsChecked="{Binding MinimizeToTray}" 
                                  Margin="0,5"/>
                    </StackPanel>
                </GroupBox>

                <!-- Data Settings -->
                <GroupBox Header="Data Settings" Padding="10">
                    <StackPanel>
                        <CheckBox Content="Save Statistics" 
                                  IsChecked="{Binding SaveStatistics}" 
                                  Margin="0,5"/>
                        <TextBlock Text="Statistics help track your productivity over time." 
                                   FontSize="12" Foreground="Gray" Margin="0,5"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Reset to Defaults" Click="Reset_Click" 
                    Margin="0,0,10,0" Padding="15,8" MinWidth="120"/>
            <Button Content="Cancel" Click="Cancel_Click" 
                    Margin="0,0,10,0" Padding="15,8" MinWidth="80"/>
            <Button Content="OK" Click="OK_Click" 
                    Padding="15,8" MinWidth="80" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>